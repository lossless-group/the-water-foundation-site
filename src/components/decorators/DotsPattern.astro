---
// Dots Pattern Component
---

<div class="dots-container" style="
  position: absolute;
  bottom: 2rem;
  right: 2rem;
  z-index: 1000;
  padding: 1.5rem;">
  <div class="dots-grid">
    <div class="dots-row">
      <div class="dot"></div>
      <div class="dot"></div>
      <div class="dot"></div>
      <div class="dot"></div>
      <div class="dot"></div>
    </div>
    <div class="dots-row">
      <div class="dot"></div>
      <div class="dot"></div>
      <div class="dot"></div>
      <div class="dot"></div>
      <div class="dot"></div>
    </div>
    <div class="dots-row">
      <div class="dot"></div>
      <div class="dot"></div>
      <div class="dot"></div>
      <div class="dot"></div>
      <div class="dot"></div>
    </div>
  </div>
</div>

<style>
  .dots-grid {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  .dots-row {
    display: flex;
    gap: 1rem;
  }
  .dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    opacity: 0.8;
  }
  
  /* First row - light blue */
  .dots-row:nth-child(1) .dot {
    background-color: #93c5fd; /* blue-300 */
  }
  
  /* Second row - medium blue */
  .dots-row:nth-child(2) .dot {
    background-color: #60a5fa; /* blue-400 */
  }
  
  /* Third row - dark blue */
  .dots-row:nth-child(3) .dot {
    background-color: #3b82f6; /* blue-500 */
  }
  .dots-container:hover .dot {
    opacity: 1;
    transform: scale(1.1);
    transition: all 0.3s ease;
  }
</style>
