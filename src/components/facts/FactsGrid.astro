---
import type { CollectionEntry } from 'astro:content';
import FactCardWithImage from './FactCard--w-Image.astro';

interface Props {
  entries: CollectionEntry<'facts'>[];
  title?: string;
  description?: string;
}

const { entries, 
    title = 'True Facts about Water', 
    description = 'Explore the counter-intuitive true facts about how water impacts livelihoods everywhere.' 
} = Astro.props;
---

<section class="relative py-20 bg-gradient-to-br from-slate-900 via-blue-900 to-teal-900 overflow-hidden">
  <!-- Animated Background Elements (matching hero) -->
  <div class="absolute inset-0 z-0">
    <!-- Floating Water Particles -->
    <div class="absolute top-20 left-20 w-3 h-3 bg-blue-400/40 rounded-full animate-float opacity-60"></div>
    <div class="absolute top-40 right-32 w-2 h-2 bg-teal-400/40 rounded-full animate-float-delay opacity-40"></div>
    <div class="absolute bottom-32 left-1/4 w-4 h-4 bg-cyan-400/40 rounded-full animate-float-slow opacity-50"></div>
    <div class="absolute top-1/2 right-1/3 w-1 h-1 bg-blue-300/40 rounded-full animate-float-fast opacity-30"></div>
    <div class="absolute top-1/3 left-1/3 w-2 h-2 bg-teal-300/40 rounded-full animate-float-delay-2 opacity-35"></div>
    <div class="absolute bottom-1/3 right-1/4 w-3 h-3 bg-cyan-300/40 rounded-full animate-float-slow-2 opacity-45"></div>
    
    <!-- Gradient Orbs -->
    <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-gradient-to-br from-blue-600/10 to-transparent rounded-full blur-3xl animate-pulse-slow"></div>
    <div class="absolute bottom-1/4 right-1/4 w-80 h-80 bg-gradient-to-br from-teal-600/10 to-transparent rounded-full blur-3xl animate-pulse-delay"></div>
    <div class="absolute top-1/2 left-1/2 w-64 h-64 bg-gradient-to-br from-cyan-600/8 to-transparent rounded-full blur-2xl animate-pulse-slow-2"></div>
  </div>

  <div class="relative z-10 max-w-6xl mx-auto px-6">
    <style>
      .fade-in {
        animation: fadeIn 0.8s ease-out forwards;
      }
      
      @keyframes fadeIn {
        from {
          opacity: 0;
          transform: translateX(-20px);
        }
        to {
          opacity: 1;
          transform: translateX(0);
        }
      }
      
      .fact-card {
        opacity: 0;
        transform: translateY(20px);
        animation: cardFadeIn 0.6s ease-out forwards;
      }
      
      @keyframes cardFadeIn {
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }
      
      /* Stagger the animations for each card */
      .fact-card:nth-child(1) { animation-delay: 0.2s; }
      .fact-card:nth-child(2) { animation-delay: 0.4s; }
      .fact-card:nth-child(3) { animation-delay: 0.6s; }
      .fact-card:nth-child(4) { animation-delay: 0.8s; }
      .fact-card:nth-child(5) { animation-delay: 1.0s; }
      .fact-card:nth-child(6) { animation-delay: 1.2s; }
    </style>
    
    <header class="mb-12 fade-in text-center backdrop-blur-md bg-white/5 dark:bg-black/10 border border-white/10 dark:border-white/5 shadow-xl py-8 px-6 rounded-xl">
      <h2 class="text-3xl md:text-4xl font-medium mb-6 tracking-wide text-cyan-300">{title}</h2>
      <p class="text-lg text-blue-100 max-w-3xl mx-auto leading-relaxed">{description}</p>
    </header>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-5">
      {entries.map((entry, index) => (
        <div class="fact-card" style={`animation-delay: ${index * 0.15}s`}>
          <FactCardWithImage entry={entry} />
        </div>
      ))}
    </div>
  </div>
</section>
