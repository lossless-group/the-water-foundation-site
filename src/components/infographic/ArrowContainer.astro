---
export interface Props {
  title?: string;
  description?: string;
  className?: string;
}

const { title, description, className = '' } = Astro.props;
---

<div class={`arrow-wrapper ${className}`}>
  <svg class="arrow-shape" viewBox="0 0 100 20" preserveAspectRatio="none">
    <polygon 
      points="0,0 85,0 100,10 85,20 0,20" 
      fill="rgba(4, 38, 50, 0.8)" 
      stroke="#0891b2" 
      stroke-width="0.5"
    />
  </svg>
  <div class="arrow-content">
    {title && <h4 class="arrow-title">{title}</h4>}
    {description && <p class="arrow-description">{description}</p>}
    <slot />
  </div>
</div>

<style>
  .arrow-wrapper {
    position: relative;
    width: 100%;
    margin: 0.5rem 0;
  }

  .arrow-shape {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }

  .arrow-wrapper:hover .arrow-shape polygon {
    fill: rgba(4, 38, 50, 0.9);
    stroke: #06b6d4;
  }

  .arrow-wrapper:hover {
    transform: translateX(4px);
  }

  .arrow-content {
    position: relative;
    z-index: 1;
    padding: 1.5rem 2.5rem 1.5rem 1.5rem;
  }

  .arrow-title {
    font-weight: 600;
    color: white;
    margin-bottom: 0.5rem;
    font-size: 1.1rem;
  }

  .arrow-description {
    color: rgba(255, 255, 255, 0.85);
    font-size: 0.9rem;
    line-height: 1.4;
    margin: 0;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .arrow-container {
      padding: 1.25rem 1.5rem 1.25rem 1.25rem;
    }

    .arrow-container::after {
      right: -15px;
      border-left-width: 15px;
    }

    .arrow-container::before {
      right: -17px;
      border-left-width: 17px;
    }
    
    .arrow-title {
      font-size: 1rem;
    }
    
    .arrow-description {
      font-size: 0.85rem;
    }
  }
</style>
