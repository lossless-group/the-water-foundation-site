---
// MeetAtTheDrop.astro
// Invitation slide for TheDrop event

interface Props {
  eventName?: string;
  eventDate?: string;
  eventLocation?: string;
  eventDescription?: string;
  contactEmail?: string;
  contactPhone?: string;
  eventWebsite?: string;
}

const {
  eventName = "TheDrop",
  eventDate = "Coming Soon",
  eventLocation = "To Be Announced",
  eventDescription = "Join us for an exclusive gathering of water innovation leaders, investors, and changemakers.",
  contactEmail = "hello@the-water-foundation.org",
  contactPhone = "+1 (555) 123-4567",
  eventWebsite = "https://the-water-foundation.org/events"
} = Astro.props;
---

<section class="meet-at-drop-slide" data-background-color="rgb(var(--color-primary-50))">
  <div class="slide-container">
    <div class="grid md:grid-cols-2 gap-12 items-center h-full max-w-7xl mx-auto">
      
      <!-- Left Side - Event Visual & Logo -->
      <div class="text-center space-y-8">
        <!-- TheDrop Logo -->
        <div class="mb-8">
          <img 
            src="/trademarks/trademark__The-Drop.svg" 
            alt="TheDrop" 
            class="w-full max-w-md mx-auto h-auto text-white"
          />
        </div>
        
        <!-- Event Photo -->
        <div class="relative group">
          <a href="https://beff2025monaco.org/programme/provisional-programme" target="_blank" rel="noopener noreferrer" class="block group">
            <img 
              src="/headshots/blue-economy-forum-monaco-2025.jpg" 
              alt="Christoph Schwager and Verena Sturm at the Blue Economy & Finance Forum Monaco 2025" 
              class="w-full max-w-lg mx-auto h-auto rounded-2xl shadow-2xl border border-white/20 group-hover:shadow-blue-400/50 transition-all duration-300"
            />
            <p class="text-lg text-blue-200 mt-4 font-light italic group-hover:text-cyan-300 transition-colors duration-300">
              Christoph Schwager and Verena Sturm representing The Water Foundation at the Blue Economy & Finance Forum Monaco 2025
            </p>
          </a>
        </div>
      </div>

      <!-- Right Side - Event Information -->
      <div class="space-y-8">
        <div class="space-y-6">
          <h1 class="text-4xl md:text-5xl font-light text-white mb-6">
            Meet us at <span class="text-cyan-300 font-normal">{eventName}</span>
          </h1>
          
          <p class="text-xl text-blue-100 leading-relaxed font-light">
            {eventDescription} Connect with visionaries who are reshaping the future of water security through innovation and strategic investment.
          </p>

          <!-- Event Details -->
          <div class="space-y-4 pt-4">
            <div class="flex items-center space-x-3">
              <svg class="w-5 h-5 text-cyan-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
              </svg>
              <span class="text-blue-100">{eventDate}</span>
            </div>
            
            <div class="flex items-center space-x-3">
              <svg class="w-5 h-5 text-cyan-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
              </svg>
              <span class="text-blue-100">{eventLocation}</span>
            </div>
          </div>
        </div>

        <!-- Contact Information -->
        <div class="bg-white/10 backdrop-blur-sm border border-white/20 rounded-2xl p-6 space-y-4">
          <h3 class="text-xl font-semibold text-white mb-4">Get in Touch</h3>
          
          <div class="space-y-3">
            <div class="flex items-center space-x-3">
              <svg class="w-5 h-5 text-cyan-400" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
                <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
              </svg>
              <a href={`mailto:${contactEmail}`} class="text-blue-100 hover:text-cyan-300 transition-colors">
                {contactEmail}
              </a>
            </div>
            
            <div class="flex items-center space-x-3">
              <svg class="w-5 h-5 text-cyan-400" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
              </svg>
              <a href={`tel:${contactPhone}`} class="text-blue-100 hover:text-cyan-300 transition-colors">
                {contactPhone}
              </a>
            </div>
            
            <div class="flex items-center space-x-3">
              <svg class="w-5 h-5 text-cyan-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M4.083 9h1.946c.089-1.546.383-2.97.837-4.118A6.004 6.004 0 004.083 9zM10 2a8 8 0 100 16 8 8 0 000-16zm0 2c-.076 0-.232.032-.465.262-.238.234-.497.623-.737 1.182-.389.907-.673 2.142-.766 3.556h3.936c-.093-1.414-.377-2.649-.766-3.556-.24-.559-.499-.948-.737-1.182C10.232 4.032 10.076 4 10 4zm3.971 5c-.089-1.546-.383-2.97-.837-4.118A6.004 6.004 0 0115.917 9h-1.946zm-2.003 2H8.032c.093 1.414.377 2.649.766 3.556.24.559.499.948.737 1.182.233.23.389.262.465.262.076 0 .232-.032.465-.262.238-.234.497-.623.737-1.182.389-.907.673-2.142.766-3.556zm1.166 4.118c.454-1.147.748-2.572.837-4.118h1.946a6.004 6.004 0 01-2.783 4.118zm-6.268 0C6.412 13.97 6.118 12.546 6.03 11H4.083a6.004 6.004 0 002.783 4.118z" clip-rule="evenodd" />
              </svg>
              <a href={eventWebsite} target="_blank" rel="noopener noreferrer" class="text-blue-100 hover:text-cyan-300 transition-colors">
                Learn More
              </a>
            </div>
          </div>
        </div>

        <!-- Call to Action -->
        <div class="pt-4">
          <a 
            href={`mailto:${contactEmail}?subject=TheDrop Event Inquiry`}
            class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-cyan-400 to-blue-500 text-white rounded-lg hover:from-cyan-500 hover:to-blue-600 transition-all duration-300 font-semibold text-lg shadow-lg hover:shadow-cyan-400/25"
          >
            Reserve Your Spot
            <svg class="ml-2 w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Animation for entrance effects */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Staggered animations */
  .space-y-8 > * {
    animation: fadeInUp 0.8s ease-out forwards;
    opacity: 0;
  }

  .space-y-8 > *:nth-child(1) { animation-delay: 0.2s; }
  .space-y-8 > *:nth-child(2) { animation-delay: 0.4s; }
  .space-y-8 > *:nth-child(3) { animation-delay: 0.6s; }
  .space-y-8 > *:nth-child(4) { animation-delay: 0.8s; }

  /* Hover effects for contact links */
  a:hover svg {
    transform: scale(1.1);
    transition: transform 0.2s ease;
  }
</style>
