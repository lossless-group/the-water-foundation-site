---
/**
 * ThankYou Component - Variant 1
 * Final slide with contact information and social links
 */

 import SocialIcons, { type SocialLink } from '@components/ui/SocialIcons.astro';

interface Props {
  title?: string;
  subtitle?: string;
  organizationName?: string;
  organizationTagline?: string;
  contactEmail?: string;
  website?: string;
  socialLinks?: SocialLink[];
}

const {
  title = "Thank You",
  subtitle = "Questions & Discussion",
  organizationName = "The Water Foundation",
  organizationTagline = "Systemic Solutions for Water Security",
  contactEmail = "info@the-water-foundation.org",
  website = "https://the-water-foundation.org",
  socialLinks = [
    { name: "LinkedIn", href: "https://www.linkedin.com/company/the-water-foundation/", icon: "linkedin" },
    { name: "Twitter", href: "https://twitter.com/the-water-foundation", icon: "twitter" },
    { name: "Website", href: "https://the-water-foundation.org", icon: "github" }
  ]
} = Astro.props;
---

<section class="thank-you-slide" data-background-color="rgb(var(--color-primary-50))">
  <div class="slide-container">
    <div class="thank-you-content">
      <h1 class="thank-you-title">{title}</h1>
      <p class="thank-you-subtitle">{subtitle}</p>
      
      <div class="contact-info">
        <div class="contact-item">
          <strong>{organizationName}</strong><br>
          {organizationTagline}
        </div>
        <div class="contact-item">
          <strong>Contact:</strong><br>
          {contactEmail}
        </div>
        <div class="contact-item">
          <strong>Learn More:</strong><br>
          {website}
        </div>
      </div>
      
      <SocialIcons 
        socialLinks={socialLinks} 
        className="justify-center" 
        iconSize="lg"
      />
    </div>
  </div>
</section>

<style>
  .thank-you-slide {
    width: 100%;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #e2e8f0;
    font-family: var(--font-family-primary);
    text-align: center;
    padding: 2rem;
  }

  .slide-container {
    max-width: 800px;
    width: 100%;
    margin: 0 auto;
  }

  .thank-you-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 3rem;
  }

  .thank-you-title {
    font-size: 4rem;
    font-weight: 700;
    margin: 0;
    background: linear-gradient(90deg, #60a5fa, #34d399);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    line-height: 1.2;
  }

  .thank-you-subtitle {
    font-size: 1.5rem;
    color: #cbd5e1;
    margin: 0;
    font-weight: 400;
  }

  .contact-info {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    width: 100%;
    margin: 2rem 0;
  }

  .contact-item {
    background: rgba(51, 65, 85, 0.6);
    padding: 1.5rem;
    border-radius: 12px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(8px);
  }

  .contact-item strong {
    color: #60a5fa;
    font-size: 1.1rem;
    font-weight: 600;
  }

  .contact-item br + * {
    color: #e2e8f0;
    font-size: 1rem;
    line-height: 1.6;
  }


  @media (max-width: 768px) {
    .thank-you-title {
      font-size: 2.5rem;
    }
    
    .contact-info {
      grid-template-columns: 1fr;
      gap: 1rem;
    }
    
    .social-links {
      flex-direction: column;
      align-items: center;
    }
  }
</style>
