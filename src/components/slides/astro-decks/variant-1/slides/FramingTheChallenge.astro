---
/**
 * FramingTheChallenge Component - Variant 1
 * Introduction slide presenting the water investment challenge
 * Features: Split layout with water technology image and key statistics
 */

import StatCard from '../../../../../components/infographic/StatCard.astro';

interface StatisticItem {
  title: string;
  value: string;
  description: string;
}

interface Props {
  statistics?: StatisticItem[];
  sectionTitle?: string;
  year?: string;
  challengeTitle?: string;
  challengeSubtitle?: string;
  introText?: string;
  heroImage?: string;
}

const {
  sectionTitle = "Introduction",
  year = "2025",
  challengeTitle = "Framing the Challenge:",
  challengeSubtitle = "Water & the SDGs",
  introText = "Water is the foundation of our global economy and food systems, yet it faces a critical investment gap that threatens our future",
  statistics = [
    {
      title: "Global GDP & Food",
      value: "70-100%",
      description: "Water underpins 70% of global GDP and 100% of food production"
    },
    {
      title: "Investment Gap",
      value: "<1%",
      description: "Receives less than 1% of institutional capital"
    },
    {
      title: "Annual Shortfall",
      value: "$670B",
      description: "Global water investment gap per year"
    },
    {
      title: "Water Scarcity",
      value: "40%",
      description: "Of global population may face water scarcity by 2030"
    },
    {
      title: "SDG Impact",
      value: "4+",
      description: "SDGs directly impacted by water (6, 13, 9, 17)"
    }
  ],
} = Astro.props as Props;
---

<section class="framing-challenge-slide" data-background-color="rgb(var(--color-primary-50))">
  <div class="slide-container">
    <!-- Left panel with title and image -->
    <div class="left-panel">
      <div class="section-title-container">
        <h1 class="section-title">{sectionTitle}</h1>
        <h2 class="text-3xl font-bold text-white mt-8">{challengeTitle}</h2>
        <h3 class="text-2xl text-blue-200 mb-8">{challengeSubtitle}</h3>
        <p class="text-lg text-gray-200 mb-8">{introText}</p>
      </div>
      
      <div class="hero-image-container">
        <div class="hero-image">
          <!-- Water technology visualization with CSS -->
          <div class="water-tech-bg">
            <div class="tech-overlay">
              <!-- Water droplet icons -->
              <div class="water-icon icon-1">
                <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M12 2.69l5.66 5.66a8 8 0 1 1-11.31 0z"/>
                </svg>
              </div>
              <div class="water-icon icon-2">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M12 2.69l5.66 5.66a8 8 0 1 1-11.31 0z"/>
                </svg>
              </div>
              <div class="water-icon icon-3">
                <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M12 2.69l5.66 5.66a8 8 0 1 1-11.31 0z"/>
                </svg>
              </div>
              
              <!-- Network connection lines -->
              <div class="connection-line line-1"></div>
              <div class="connection-line line-2"></div>
              <div class="connection-line line-3"></div>
              
              <!-- Circular tech elements -->
              <div class="tech-circle circle-1"></div>
              <div class="tech-circle circle-2"></div>
              <div class="tech-circle circle-3"></div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Decorative dots pattern -->
      <div class="dots-pattern">
        <div class="dot-grid">
          <div class="dot"></div>
          <div class="dot"></div>
          <div class="dot"></div>
          <div class="dot"></div>
          <div class="dot"></div>
          <div class="dot"></div>
          <div class="dot"></div>
          <div class="dot"></div>
          <div class="dot"></div>
        </div>
      </div>
    </div>

    <!-- Right panel with stats -->
    <div class="right-panel">
      <div class="content-section">
        <div class="stats-grid">
          {statistics && statistics.map((stat, index) => (
            <StatCard
              value={stat.value}
              title={stat.title}
              description={stat.description}
            />
          ))}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .stats-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
    width: 100%;
    margin-top: 2rem;
  }

  .stat-card {
    background: rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    padding: 1.5rem;
    backdrop-filter: blur(4px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .stat-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
  }

  .stat-value {
    font-size: 2.5rem;
    font-weight: 700;
    color: white;
    margin-bottom: 0.5rem;
    line-height: 1.2;
  }

  .stat-title {
    font-size: 1.1rem;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.9);
    margin: 0.5rem 0;
  }

  .stat-description {
    font-size: 0.95rem;
    color: rgba(255, 255, 255, 0.7);
    margin: 0;
    line-height: 1.5;
  }

  @media (max-width: 1024px) {
    .stats-grid {
      grid-template-columns: 1fr;
    }
    
    .stat-card {
      padding: 1.25rem;
    }
    
    .stat-value {
      font-size: 2rem;
    }
  }

  .framing-challenge-slide {
    width: 100%;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: 
      linear-gradient(rgba(15, 23, 42, 0.8), rgba(15, 23, 42, 0.9)),
      url('/images/imageOf__Horizontal-River--Greyscale.png');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    font-family: var(--font-family-primary);
    padding: 4rem 2rem;
    overflow: hidden;
    color: #e2e8f0;
  }

  .slide-container {
    width: 100%;
    height: 100%;
    max-width: 1600px;
    display: grid;
    grid-template-columns: 1fr 1fr;
  }

  /* Left Panel Styling */
  .left-panel {
    flex: 1;
    padding: 2rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    position: relative;
    z-index: 1;
    background: rgba(15, 23, 42, 0.9);
    border-radius: 16px;
    margin: 1rem;
    backdrop-filter: blur(8px);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .section-title-container {
    margin-bottom: 2rem;
  }

  .section-title {
    font-size: 1.2rem;
    font-weight: 600;
    color: #60a5fa;
    text-transform: uppercase;
    letter-spacing: 2px;
    margin-bottom: 2rem;
  }

  .hero-image-container {
    margin-top: 2rem;
    position: relative;
    width: 100%;
    height: 300px;
    border-radius: 12px;
    overflow: hidden;
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(5px);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .hero-image {
    width: 100%;
    height: 100%;
    position: relative;
  }

  .water-tech-bg {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, rgb(var(--color-accent-600)) 0%, rgb(var(--color-accent-400)) 50%, rgb(var(--color-accent-300)) 100%);
    border-radius: 12px;
    position: relative;
    overflow: hidden;
  }

  .tech-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(45deg, rgba(0,0,0,0.1) 0%, transparent 50%, rgba(255,255,255,0.1) 100%);
  }

  .water-icon {
    position: absolute;
    color: rgba(255, 255, 255, 0.8);
    animation: float 3s ease-in-out infinite;
  }

  .icon-1 { top: 20%; left: 25%; animation-delay: 0s; }
  .icon-2 { top: 60%; left: 70%; animation-delay: 1s; }
  .icon-3 { top: 40%; left: 50%; animation-delay: 2s; }

  .connection-line {
    position: absolute;
    background: rgba(255, 255, 255, 0.3);
    animation: pulse 2s ease-in-out infinite;
  }

  .line-1 {
    width: 80px;
    height: 2px;
    top: 35%;
    left: 35%;
    transform: rotate(25deg);
  }

  .line-2 {
    width: 60px;
    height: 2px;
    top: 55%;
    left: 45%;
    transform: rotate(-15deg);
  }

  .line-3 {
    width: 2px;
    height: 50px;
    top: 25%;
    left: 60%;
  }

  .tech-circle {
    position: absolute;
    border: 2px solid rgba(255, 255, 255, 0.4);
    border-radius: 50%;
    animation: rotate 8s linear infinite;
  }

  .circle-1 {
    width: 40px;
    height: 40px;
    top: 15%;
    right: 20%;
  }

  .circle-2 {
    width: 60px;
    height: 60px;
    bottom: 20%;
    left: 15%;
    animation-direction: reverse;
  }

  .circle-3 {
    width: 30px;
    height: 30px;
    top: 70%;
    right: 35%;
    animation-duration: 12s;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0px); opacity: 0.8; }
    50% { transform: translateY(-8px); opacity: 1; }
  }

  @keyframes pulse {
    0%, 100% { opacity: 0.3; }
    50% { opacity: 0.8; }
  }

  @keyframes rotate {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  .dots-pattern {
    position: absolute;
    bottom: 3rem;
    left: 3rem;
  }

  .dot-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 0.5rem;
  }

  .dot {
    width: 8px;
    height: 8px;
    background: rgba(255, 255, 255, 0.4);
    border-radius: 50%;
  }

  /* Right Panel Styling */
  .right-panel {
    background: rgb(var(--color-primary-50));
    padding: 3rem;
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
  }

  .year-badge {
    position: absolute;
    top: 3rem;
    right: 3rem;
    font-size: 1.25rem;
    font-weight: var(--font-weight-medium);
    color: rgb(var(--color-primary-600));
  }

  .content-section {
    max-width: 500px;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .challenge-header {
    margin-bottom: 2rem;
  }

  .challenge-title {
    font-size: 1.5rem;
    font-weight: var(--font-weight-bold);
    color: rgb(var(--color-primary-900));
    margin: 0 0 0.5rem 0;
    line-height: 1.3;
  }

  .challenge-subtitle {
    font-size: 1.5rem;
    font-weight: var(--font-weight-bold);
    color: rgb(var(--color-primary-900));
    margin: 0;
    line-height: 1.3;
  }

  .intro-text {
    font-size: 1.125rem;
    line-height: 1.6;
    color: rgb(var(--color-primary-700));
    font-style: italic;
    margin-bottom: 2rem;
  }

  .statistics-list {
    list-style: none;
    padding: 0;
    margin: 2rem 0;
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
  }

  .statistic-item {
    font-size: 1rem;
    line-height: 1.6;
    color: rgb(var(--color-primary-800));
    padding-left: 1.5rem;
    position: relative;
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .slide-container {
      grid-template-columns: 1fr;
      grid-template-rows: 1fr 1fr;
    }
    
    .left-panel, .right-panel {
      padding: 2rem;
    }
    
    .section-title {
      font-size: 3rem;
    }
    
    .hero-image {
      width: 280px;
      height: 220px;
    }
  }

  @media (max-width: 768px) {
    .left-panel, .right-panel {
      padding: 1.5rem;
    }
    
    .section-title {
      font-size: 2.5rem;
    }
    
    .challenge-title, .challenge-subtitle {
      font-size: 1.25rem;
    }
    
    .intro-text {
      font-size: 1rem;
    }
    
    .hero-image {
      width: 240px;
      height: 180px;
    }
  }
</style>
