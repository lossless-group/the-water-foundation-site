---
/**
 * OurTeam Component - Variant 1
 * Displays team members in a grid layout
 */

interface TeamMember {
  name: string;
  role: string;
  image: string;
  bio: string;
  socialLinks?: Array<{name: string; href: string; icon: string;}>;
}

interface Props {
  mainTitle?: string;
  titleHighlight?: string;
  teamMembers?: TeamMember[];
}

const {
  mainTitle = "Our",
  titleHighlight = "Team",
  teamMembers = [
    {
      name: 'Christoph Schwager',
      role: 'Managing Partner, Co-Founder, Co-Chair',
      image: '/headshots/headshotOf__Christoph-Schwager.jpg',
      bio: 'Strategic leader with deep expertise in operational, financial, and technological domains.',
      socialLinks: [
        { name: 'LinkedIn', href: 'https://www.linkedin.com/in/christophschwager/', icon: 'linkedin' }
      ]
    },
    {
      name: 'Verena A. Sturm',
      role: 'Managing Partner, Co-Founder, Co-Chair',
      image: '/headshots/headshotOf__Verena-Sturm.jpeg',
      bio: 'Guiding the platform\'s capital formation, strategic partnerships, and policy engagement.',
      socialLinks: [
        { name: 'LinkedIn', href: 'https://www.linkedin.com/in/verena-alice-sturm/', icon: 'linkedin' }
      ]
    },
    {
      name: 'Christophe C. Meeus',
      role: 'Trustee',
      image: '/headshots/headshotOf__Christophe-C-Meeus.webp',
      bio: 'Managing Director, CFO, General Counsel, and Board Member with international executive experience.',
      socialLinks: [
        { name: 'LinkedIn', href: 'https://www.linkedin.com/in/christophe-c-meeus-7031b1/', icon: 'linkedin' }
      ]
    },
    {
      name: 'Felix Famira',
      role: 'Co-Founder & Director of Operations',
      image: '/headshots/headshotOf__Felix-Famira.png',
      bio: 'Expert in operations and strategic development for water-related initiatives.',
      socialLinks: []
    }
  ]
} = Astro.props;
---

<section class="our-team-slide">
  <div class="slide-container">
    <div class="slide-header">
      <h1 class="main-title">
        <span class="title-our">{mainTitle}</span>
        <span class="title-team">{titleHighlight}</span>
      </h1>
    </div>
    
    <div class="team-grid">
      {teamMembers.map(member => (
        <div class="team-member">
          <div class="member-image-container">
            <img 
              src={member.image} 
              alt={`Portrait of ${member.name}`} 
              class="member-image"
              width="200"
              height="200"
              loading="lazy"
            />
          </div>
          <div class="member-info">
            <h3 class="member-name">{member.name}</h3>
            <p class="member-role">{member.role}</p>
            <p class="member-bio">{member.bio}</p>
            {member.socialLinks && member.socialLinks.length > 0 && (
              <div class="social-links">
                {member.socialLinks.map(link => (
                  <a 
                    href={link.href} 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="social-link"
                    title={link.name}
                  >
                    <span class="sr-only">{link.name}</span>
                    <span class="social-icon" data-icon={link.icon}></span>
                  </a>
                ))}
              </div>
            )}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .our-team-slide {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgb(var(--color-primary-50));
    padding: 2rem;
  }

  .slide-container {
    max-width: 1400px;
    width: 100%;
    margin: 0 auto;
  }

  .slide-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .main-title {
    font-size: 3.5rem;
    margin: 0 0 1rem;
    color: var(--slide-text-primary);
  }

  .title-our {
    font-weight: var(--font-weight-normal);
    color: var(--slide-accent-bright);
    margin-right: 0.5rem;
  }

  .title-team {
    font-weight: var(--font-weight-bold);
    color: var(--slide-text-primary);
  }

  .team-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
    justify-content: center;
  }

  .team-member {
    background: rgba(var(--color-primary-900), 0.6);
    border-radius: var(--border-radius-lg);
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    display: flex;
    flex-direction: column;
    border: 1px solid rgba(var(--color-accent-500), 0.1);
  }

  .team-member:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
  }

  .member-image-container {
    width: 100%;
    aspect-ratio: 1;
    overflow: hidden;
  }

  .member-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .team-member:hover .member-image {
    transform: scale(1.05);
  }

  .member-info {
    padding: 1.5rem;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  .member-name {
    font-size: 1.5rem;
    font-weight: var(--font-weight-bold);
    color: var(--slide-text-primary);
    margin: 0 0 0.5rem;
  }

  .member-role {
    font-size: 1rem;
    color: var(--slide-accent);
    margin: 0 0 1rem;
    font-weight: var(--font-weight-medium);
  }

  .member-bio {
    font-size: 0.95rem;
    color: var(--slide-text-secondary);
    line-height: 1.6;
    margin-bottom: 1.5rem;
    flex-grow: 1;
  }

  .social-links {
    display: flex;
    gap: 1rem;
    margin-top: auto;
  }

  .social-link {
    color: var(--slide-accent-bright);
    transition: color 0.2s ease;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border-radius: 50%;
    background: rgba(var(--color-accent-500), 0.1);
  }

  .social-link:hover {
    color: var(--slide-accent);
    background: rgba(var(--color-accent-500), 0.2);
  }

  .social-icon {
    font-size: 1.2rem;
  }

  @media (max-width: 768px) {
    .main-title {
      font-size: 2.5rem;
    }
    
    .team-grid {
      grid-template-columns: 1fr;
      max-width: 500px;
      margin: 0 auto;
    }
  }
</style>
