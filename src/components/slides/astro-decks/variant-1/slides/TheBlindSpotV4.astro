---
/**
 * TheBlindSpotV4 Component - Variant 4
 * Highlights the water crisis as humanity's biggest blind spot
 */

import AnimatedWaterBackground from '@components/ui/AnimatedWaterBackground.astro';

interface Props {
  mainTitle?: string;
  subtitle?: string;
  cities?: Array<{ name: string; color: string }>;
  impacts?: Array<{ title: string; description: string; color: string }>;
  ctaText?: string;
  ctaLink?: string;
}

const {
  mainTitle = "THE WATER FOUNDATION IS SET UP TO TACKLE A CORE BLIND SPOT OF HUMANKILD.",
  subtitle = "The defining issue of our time",
  cities = [
    { name: 'Dubai', color: 'cyan' },
    { name: 'Delhi', color: 'blue' },
    { name: 'Vaduz', color: 'teal' },
    { name: 'Munich', color: 'indigo' }
  ],
  impacts = [
    {
      title: 'Financing Mismatch',
      description: '90% of climate adaptation needs are water-based, yet less than 5% of climate finance is directed toward water.',
      color: 'text-cyan-300'
    },
    {
      title: 'Resilience Gap',
      description: 'Wide-open weak spots in water strategies and implementation.',
      color: 'text-blue-300'
    },
    {
      title: 'Asset Neglect',
      description: 'Water assets are underpriced, fragmented, and underprotected.',
      color: 'text-teal-300'
    }
  ],
  ctaText = 'Learn about our approach',
  ctaLink = '/about'
} = Astro.props;
---

<section data-transition="slide" data-background="#0f172a">
  <div class="h-full w-full relative overflow-hidden">
    <!-- Animated Water Background -->
    <AnimatedWaterBackground intensity="subtle" pattern="scattered" />
    
    <div class="relative z-10 h-full w-full max-w-7xl mx-auto px-6 py-12 flex flex-col">
      <div class="text-right mb-8">
        <h1 class="text-3xl md:text-4xl font-light text-white uppercase tracking-wider leading-tight">
          {mainTitle}
        </h1>
        
        <!-- Collaboration Cities -->
        <div class="mt-8">
          <p class="text-blue-200 text-lg mb-3">Collaborating from</p>
          <div class="flex flex-wrap justify-end gap-3">
            {cities.map((city) => (
              <div class="transition-transform hover:scale-105">
                <span class={`inline-block px-4 py-2 rounded-full text-sm font-medium border 
                  ${city.color === 'cyan' ? 'bg-cyan-500/30 border-cyan-400/50 hover:bg-cyan-500/40 hover:border-cyan-400/70 text-cyan-100' : ''}
                  ${city.color === 'blue' ? 'bg-blue-500/30 border-blue-400/50 hover:bg-blue-500/40 hover:border-blue-400/70 text-blue-100' : ''}
                  ${city.color === 'teal' ? 'bg-teal-500/30 border-teal-400/50 hover:bg-teal-500/40 hover:border-teal-400/70 text-teal-100' : ''}
                  ${city.color === 'indigo' ? 'bg-indigo-500/30 border-indigo-400/50 hover:bg-indigo-500/40 hover:border-indigo-400/70 text-indigo-100' : ''}
                  backdrop-blur-sm`}>
                  {city.name}
                </span>
              </div>
            ))}
          </div>
        </div>
      </div>

      <!-- Impact Cards -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-auto">
        {impacts.map((impact) => (
          <div class="bg-white/5 backdrop-blur-sm rounded-xl p-6 border border-white/10 hover:border-white/20 transition-all duration-300">
            <h3 class={`text-xl font-medium mb-3 ${impact.color}`}>{impact.title}</h3>
            <p class="text-gray-300">{impact.description}</p>
          </div>
        ))}
      </div>

      <!-- CTA -->
      <div class="mt-12 text-center">
        <a 
          href={ctaLink}
          class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200"
        >
          {ctaText}
          <svg class="ml-2 -mr-1 w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>
