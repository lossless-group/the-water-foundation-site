---
/**
 * UnconventionalWaterFacts Slide Component
 * Dynamic carousel slide displaying water facts from the collection
 * Features: CSS-based carousel navigation through fact cards
 */

import { getCollection } from 'astro:content';
import FactsCarousel from '@components/facts/FactsCarousel.astro';

// Get all facts from the collection
const allFacts = await getCollection('facts');

// Sort facts by index to ensure proper order
const sortedFacts = allFacts.sort((a, b) => a.data.index - b.data.index);

---

<section 
  class="slide-container" 
  data-background-color="rgb(4, 31, 42)"
  data-transition="slide"
>
  <div class="slide-content">
    <FactsCarousel 
      entries={sortedFacts}
      title="Unconventional Water Facts"
      subtitle="Think outside the box with our unconventional water insights"
      showHeader={true}
    />
  </div>
</section>

<style>
  .slide-content {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
  }
</style>
