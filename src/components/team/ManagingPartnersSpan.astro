---
// src/components/team/ManagingPartnersSpan.astro
import PersonCard from './PersonCard.astro';
import type { TeamMember } from '../../types/team';
import "@styles/team-spans.css";

interface Props {
  members: TeamMember[];
}

const { members } = Astro.props;
---

<div class="team-span">
  <h2 class="role-header">Managing Partners</h2>
  <div class="person-cards">
    {members.map(member => (
      <PersonCard {...member} />
    ))}
  </div>
</div>

