---
import PersonCard from './PersonCard.astro';

type SocialPlatform = 'twitter' | 'facebook' | 'instagram' | 'linkedin' | 'youtube' | 'github';

export interface PersonProps {
  name: string;
  role: string;
  image: string;
  bio: string;
  socialLinks?: Array<{
    name: string;
    href: string;
    icon?: SocialPlatform;
  }>;
  className?: string;
  maxWords?: number;
}

export interface TeamGridProps {
  teamMembers: PersonProps[];
  className?: string;
  cardComponent?: any; 
}

const { 
  teamMembers, 
  className = '',
  cardComponent: CardComponent = PersonCard 
} = Astro.props;
---

<div class:list={[
  'grid gap-8',
  'grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4',
  'mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-12',
  className
]}>
  {teamMembers.map((member, index) => (
    <CardComponent {...member} />
  ))}
</div>
