---
// src/components/layout/BaseGridLayout.astro

interface Props {
  children: any;
  minColumnWidth?: string;
  gap?: string;
}

const { 
  children, 
  minColumnWidth = 'minmax(300px, 1fr)', 
  gap = '1.5rem' 
} = Astro.props;
---

<div class="container">
  <slot />
</div>

<style>
  .container {
    display: grid;
    grid-template-columns: minmax(0, 1fr);
    gap: 3rem;
    width: 100%;
    max-width: 1440px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }
  
  .team-span {
    display: grid;
    grid-template-columns: minmax(0, 1fr);
    gap: 1.5rem;
    width: 100%;
  }
  
  .role-header {
    font-size: 1.8rem;
    font-weight: 600;
    color: white;
    margin: 0 0 1rem 0;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    grid-column: 1 / -1;
  }
  
  .person-cards {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.5rem;
    width: 100%;
    grid-column: 1 / -1;
  }
  
  .team-span:first-child > .role-header {
    margin-top: 0;
  }
  
  /* Responsive adjustments */
  @media (max-width: 768px) {
    .container {
      padding: 1rem 0.5rem;
      gap: 2rem;
    }
    
    .person-cards {
      grid-template-columns: 1fr;
    }
  }
</style>
