---
// Global Indicators Tracker Component
---

<section class="relative py-20 bg-gradient-to-br from-slate-900 via-blue-900 to-teal-900 overflow-hidden">
  <!-- Animated Background Elements -->
  <div class="absolute inset-0">
    <div class="absolute top-20 left-10 w-32 h-32 bg-blue-500/10 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute bottom-20 right-10 w-40 h-40 bg-teal-500/10 rounded-full blur-3xl animate-pulse" style="animation-delay: 2s;"></div>
    <div class="absolute top-1/2 left-1/4 w-24 h-24 bg-cyan-500/10 rounded-full blur-2xl animate-pulse" style="animation-delay: 1s;"></div>
  </div>
  
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <!-- Header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-light text-white mb-4 tracking-wide">
        <span class="block text-white font-light">Key Global Indicators</span>
      </h2>
      <div class="w-16 h-px bg-gradient-to-r from-transparent via-gray-400 to-transparent mx-auto"></div>
    </div>
    
    <!-- Indicators Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      
      <!-- Access to Safe Drinking Water -->
      <div class="group relative">
        <div class="bg-gradient-to-br from-gray-800/80 to-gray-900/80 backdrop-blur-xl border border-gray-600/80 rounded-xl p-6 h-full transform transition-all duration-500 hover:scale-105 hover:bg-gradient-to-br hover:from-gray-800/90 hover:to-gray-900/90 hover:border-gray-600/90 hover:shadow-2xl hover:shadow-gray-600/30">
          <!-- Header with Status -->
          <div class="flex items-center justify-end mb-4">
            <span class="px-3 py-1 bg-gray-700/90 text-white text-sm font-semibold rounded-full border border-gray-600/90">
              Critical
            </span>
          </div>
          
          <!-- Content -->
          <h3 class="text-lg font-semibold text-white mb-3">Access to Safe Drinking Water</h3>
          <p class="text-3xl font-bold text-white mb-2">2.2B</p>
          <p class="text-gray-100 text-sm leading-relaxed">people without access</p>
          
          <!-- Source -->
          <div class="mt-4 pt-3 border-t border-white/30">
            <p class="text-xs text-gray-300 font-medium">UNICEF/WHO JMP, 2023</p>
          </div>
        </div>
        
        <!-- Floating Elements -->
        <div class="absolute -top-1 -right-1 w-3 h-3 bg-gray-500/80 rounded-full animate-pulse"></div>
        <div class="absolute -bottom-1 -left-1 w-2 h-2 bg-gray-500/70 rounded-full animate-pulse" style="animation-delay: 1s;"></div>
      </div>
      
      <!-- Sanitation Access -->
      <div class="group relative">
        <div class="bg-gradient-to-br from-gray-800/80 to-gray-900/80 backdrop-blur-xl border border-gray-600/80 rounded-xl p-6 h-full transform transition-all duration-500 hover:scale-105 hover:bg-gradient-to-br hover:from-gray-800/90 hover:to-gray-900/90 hover:border-gray-600/90 hover:shadow-2xl hover:shadow-gray-600/30">
          <!-- Header with Status -->
          <div class="flex items-center justify-end mb-4">
            <span class="px-3 py-1 bg-gray-700/90 text-white text-sm font-semibold rounded-full border border-gray-600/90">
              Critical
            </span>
          </div>
          
          <!-- Content -->
          <h3 class="text-lg font-semibold text-white mb-3">Sanitation Access</h3>
          <p class="text-3xl font-bold text-white mb-2">3.5B</p>
          <p class="text-gray-100 text-sm leading-relaxed">lack safe sanitation</p>
          
          <!-- Source -->
          <div class="mt-4 pt-3 border-t border-white/30">
            <p class="text-xs text-gray-300 font-medium">WHO/UNICEF JMP, 2023</p>
          </div>
        </div>
        
        <!-- Floating Elements -->
        <div class="absolute -top-1 -right-1 w-3 h-3 bg-gray-500/80 rounded-full animate-pulse"></div>
        <div class="absolute -bottom-1 -left-1 w-2 h-2 bg-gray-500/70 rounded-full animate-pulse" style="animation-delay: 1s;"></div>
      </div>
      
      <!-- Wastewater -->
      <div class="group relative">
        <div class="bg-gradient-to-br from-gray-600/70 to-gray-700/70 backdrop-blur-xl border border-gray-500/70 rounded-xl p-6 h-full transform transition-all duration-500 hover:scale-105 hover:bg-gradient-to-br hover:from-gray-600/80 hover:to-gray-700/80 hover:border-gray-500/80 hover:shadow-2xl hover:shadow-gray-500/25">
          <!-- Header with Status -->
          <div class="flex items-center justify-end mb-4">
            <span class="px-3 py-1 bg-gray-600/80 text-white text-sm font-semibold rounded-full border border-gray-500/80">
              Severe
            </span>
          </div>
          
          <!-- Content -->
          <h3 class="text-lg font-semibold text-white mb-3">Wastewater</h3>
          <p class="text-3xl font-bold text-white mb-2">80%</p>
          <p class="text-gray-100 text-sm leading-relaxed">untreated globally</p>
          
          <!-- Source -->
          <div class="mt-4 pt-3 border-t border-white/30">
            <p class="text-xs text-gray-300 font-medium">UNESCO WWDR, 2023</p>
          </div>
        </div>
        
        <!-- Floating Elements -->
        <div class="absolute -top-1 -right-1 w-3 h-3 bg-gray-400/70 rounded-full animate-pulse"></div>
        <div class="absolute -bottom-1 -left-1 w-2 h-2 bg-gray-400/60 rounded-full animate-pulse" style="animation-delay: 1s;"></div>
      </div>
      
      <!-- Economic Losses -->
      <div class="group relative">
        <div class="bg-gradient-to-br from-gray-600/70 to-gray-700/70 backdrop-blur-xl border border-gray-500/70 rounded-xl p-6 h-full transform transition-all duration-500 hover:scale-105 hover:bg-gradient-to-br hover:from-gray-600/80 hover:to-gray-700/80 hover:border-gray-500/80 hover:shadow-2xl hover:shadow-gray-500/25">
          <!-- Header with Status -->
          <div class="flex items-center justify-end mb-4">
            <span class="px-3 py-1 bg-gray-600/80 text-white text-sm font-semibold rounded-full border border-gray-500/80">
              Severe
            </span>
          </div>
          
          <!-- Content -->
          <h3 class="text-lg font-semibold text-white mb-3">Economic Losses</h3>
          <p class="text-3xl font-bold text-white mb-2">$260B</p>
          <p class="text-gray-100 text-sm leading-relaxed">annually</p>
          
          <!-- Source -->
          <div class="mt-4 pt-3 border-t border-white/30">
            <p class="text-xs text-gray-300 font-medium">World Bank, 2021</p>
          </div>
        </div>
        
        <!-- Floating Elements -->
        <div class="absolute -top-1 -right-1 w-3 h-3 bg-gray-400/70 rounded-full animate-pulse"></div>
        <div class="absolute -bottom-1 -left-1 w-2 h-2 bg-gray-400/60 rounded-full animate-pulse" style="animation-delay: 1s;"></div>
      </div>
      
      <!-- Market Growth -->
      <div class="group relative">
        <div class="bg-gradient-to-br from-gray-400/60 to-gray-500/60 backdrop-blur-xl border border-gray-400/60 rounded-xl p-6 h-full transform transition-all duration-500 hover:scale-105 hover:bg-gradient-to-br hover:from-gray-400/70 hover:to-gray-500/70 hover:border-gray-400/70 hover:shadow-2xl hover:shadow-gray-400/20">
          <!-- Header with Status -->
          <div class="flex items-center justify-end mb-4">
            <span class="px-3 py-1 bg-gray-500/70 text-white text-sm font-semibold rounded-full border border-gray-400/70">
              Opportunity
            </span>
          </div>
          
          <!-- Content -->
          <h3 class="text-lg font-semibold text-white mb-3">Market Growth</h3>
          <p class="text-3xl font-bold text-white mb-2">$1T+</p>
          <p class="text-gray-100 text-sm leading-relaxed">water tech market by 2030</p>
          
          <!-- Source -->
          <div class="mt-4 pt-3 border-t border-white/30">
            <p class="text-xs text-gray-300 font-medium">BNEF, 2023</p>
          </div>
        </div>
        
        <!-- Floating Elements -->
        <div class="absolute -top-1 -right-1 w-3 h-3 bg-gray-300/60 rounded-full animate-pulse"></div>
        <div class="absolute -bottom-1 -left-1 w-2 h-2 bg-gray-300/50 rounded-full animate-pulse" style="animation-delay: 1s;"></div>
      </div>
      
      <!-- Climate Impact -->
      <div class="group relative">
        <div class="bg-gradient-to-br from-gray-800/80 to-gray-900/80 backdrop-blur-xl border border-gray-600/80 rounded-xl p-6 h-full transform transition-all duration-500 hover:scale-105 hover:bg-gradient-to-br hover:from-gray-800/90 hover:to-gray-900/90 hover:border-gray-600/90 hover:shadow-2xl hover:shadow-gray-600/30">
          <!-- Header with Status -->
          <div class="flex items-center justify-end mb-4">
            <span class="px-3 py-1 bg-gray-700/90 text-white text-sm font-semibold rounded-full border border-gray-600/90">
              Critical
            </span>
          </div>
          
          <!-- Content -->
          <h3 class="text-lg font-semibold text-white mb-3">Climate Impact</h3>
          <p class="text-3xl font-bold text-white mb-2">74%</p>
          <p class="text-gray-100 text-sm leading-relaxed">of climate disasters water-related</p>
          
          <!-- Source -->
          <div class="mt-4 pt-3 border-t border-white/30">
            <p class="text-xs text-gray-300 font-medium">UNDRR, 2022</p>
          </div>
        </div>
        
        <!-- Floating Elements -->
        <div class="absolute -top-1 -right-1 w-3 h-3 bg-gray-500/80 rounded-full animate-pulse"></div>
        <div class="absolute -bottom-1 -left-1 w-2 h-2 bg-gray-500/70 rounded-full animate-pulse" style="animation-delay: 1s;"></div>
      </div>
      
    </div>
    
    <!-- Bottom Decorative Line -->
    <div class="mt-12 text-center">
      <div class="w-16 h-px bg-gradient-to-r from-transparent via-gray-400 to-transparent mx-auto"></div>
    </div>
  </div>
</section>

<style>
  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
  }
  
  .animate-float {
    animation: float 3s ease-in-out infinite;
  }
</style>
