---
export interface Props {
  containerClass?: string;
  title?: string;
}

const { 
  containerClass = "bg-card border border-border rounded-xl p-6",
  title = "Unsiloed Finance"
} = Astro.props;
---

<div class={containerClass}>
  <h2 class="text-xl font-semibold text-foreground mb-4">{title}</h2>
  
  <div class="space-y-3">
    <div class="finance-item p-3 bg-cyan-600/5 border border-cyan-600/20 rounded-lg hover:bg-cyan-600/10 transition-colors cursor-pointer">
      <div class="flex items-center mb-2">
        <div class="w-6 h-6 bg-cyan-600 rounded-full flex items-center justify-center text-white text-xs font-bold mr-3">1</div>
        <h3 class="font-semibold text-foreground">Venture Builders</h3>
      </div>
      <p class="text-xs text-muted-foreground ml-9">Identify best water IP/ideas, build teams, enable with capital</p>
    </div>
    
    <div class="finance-item p-3 bg-blue-500/5 border border-blue-500/20 rounded-lg hover:bg-blue-500/10 transition-colors cursor-pointer">
      <div class="flex items-center mb-2">
        <div class="w-6 h-6 bg-blue-500 rounded-full flex items-center justify-center text-white text-xs font-bold mr-3">2</div>
        <h3 class="font-semibold text-foreground">VC Funds</h3>
      </div>
      <p class="text-xs text-muted-foreground ml-9">Invest in existing teams, plug into venture ecosystem, scale</p>
    </div>
    
    <div class="finance-item p-3 bg-green-500/5 border border-green-500/20 rounded-lg hover:bg-green-500/10 transition-colors cursor-pointer">
      <div class="flex items-center mb-2">
        <div class="w-6 h-6 bg-green-500 rounded-full flex items-center justify-center text-white text-xs font-bold mr-3">3</div>
        <h3 class="font-semibold text-foreground">PE Funds</h3>
      </div>
      <p class="text-xs text-muted-foreground ml-9">Buy incumbents and hidden champions, build something bigger</p>
    </div>
  </div>
</div>
