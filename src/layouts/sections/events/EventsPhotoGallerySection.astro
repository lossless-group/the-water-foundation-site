---
import AnimatedWaterBackground from "@components/ui/AnimatedWaterBackground.astro";
---
    <!-- Photo Gallery Section -->
    <section class="relative py-20 bg-gradient-to-br from-indigo-900 via-blue-900 to-cyan-900 overflow-hidden">
        <!-- Animated Water Background -->
        <AnimatedWaterBackground intensity="subtle" pattern="flowing" />
        
        <div class="relative z-10 max-w-7xl mx-auto px-6">
          <div class="text-center mb-16">
            <h2 class="text-3xl md:text-4xl font-medium mb-6 tracking-wide text-cyan-300">
              Event Photos
            </h2>
            <p class="text-lg text-blue-100 max-w-3xl mx-auto">
              Capturing the energy and collaboration at our water innovation events
            </p>
          </div>
  
          <!-- Photo Grid -->
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <!-- Photo 1 -->
            <div class="group relative overflow-hidden rounded-2xl bg-gradient-to-br from-cyan-500/20 to-blue-600/20 backdrop-blur-sm border border-cyan-400/30 hover:border-cyan-400/50 transition-all duration-500 hover:scale-105">
              <div class="aspect-[4/3] bg-gradient-to-br from-cyan-400/40 to-blue-500/40 flex items-center justify-center relative overflow-hidden">
                <!-- Placeholder for actual photo -->
                <div class="absolute inset-0 bg-gradient-to-br from-cyan-400/60 to-blue-500/60 flex items-center justify-center">
                  <svg class="w-16 h-16 text-white/80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                </div>
                <!-- Photo overlay -->
                <div class="absolute inset-0 bg-black/40 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center">
                  <button class="bg-white/20 backdrop-blur-sm text-white px-4 py-2 rounded-lg border border-white/30 hover:bg-white/30 transition-all duration-300">
                    View Full Size
                  </button>
                </div>
              </div>
              <div class="p-4">
                <h3 class="text-lg font-semibold text-cyan-200 mb-2">Water Innovation Summit 2023</h3>
                <p class="text-blue-100 text-sm">Opening keynote session with industry leaders</p>
              </div>
            </div>
  
            <!-- Photo 2 -->
            <div class="group relative overflow-hidden rounded-2xl bg-gradient-to-br from-indigo-500/20 to-purple-600/20 backdrop-blur-sm border border-indigo-400/30 hover:border-indigo-400/50 transition-all duration-500 hover:scale-105">
              <div class="aspect-[4/3] bg-gradient-to-br from-indigo-400/40 to-purple-500/40 flex items-center justify-center relative overflow-hidden">
                <div class="absolute inset-0 bg-gradient-to-br from-indigo-400/60 to-purple-500/60 flex items-center justify-center">
                  <svg class="w-16 h-16 text-white/80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                </div>
                <div class="absolute inset-0 bg-black/40 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center">
                  <button class="bg-white/20 backdrop-blur-sm text-white px-4 py-2 rounded-lg border border-white/30 hover:bg-white/30 transition-all duration-300">
                    View Full Size
                  </button>
                </div>
              </div>
              <div class="p-4">
                <h3 class="text-lg font-semibold text-indigo-200 mb-2">Community Workshop</h3>
                <p class="text-blue-100 text-sm">Hands-on water conservation training</p>
              </div>
            </div>
  
            <!-- Photo 3 -->
            <div class="group relative overflow-hidden rounded-2xl bg-gradient-to-br from-blue-500/20 to-cyan-600/20 backdrop-blur-sm border border-blue-400/30 hover:border-blue-400/50 transition-all duration-500 hover:scale-105">
              <div class="aspect-[4/3] bg-gradient-to-br from-blue-400/40 to-cyan-500/40 flex items-center justify-center relative overflow-hidden">
                <div class="absolute inset-0 bg-gradient-to-br from-blue-400/60 to-cyan-500/60 flex items-center justify-center">
                  <svg class="w-16 h-16 text-white/80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                </div>
                <div class="absolute inset-0 bg-black/40 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center">
                  <button class="bg-white/20 backdrop-blur-sm text-white px-4 py-2 rounded-lg border border-white/30 hover:bg-white/30 transition-all duration-300">
                    View Full Size
                  </button>
                </div>
              </div>
              <div class="p-4">
                <h3 class="text-lg font-semibold text-blue-200 mb-2">Investor Forum</h3>
                <p class="text-blue-100 text-sm">Startup pitch presentations and networking</p>
              </div>
            </div>
  
            <!-- Photo 4 -->
            <div class="group relative overflow-hidden rounded-2xl bg-gradient-to-br from-green-500/20 to-blue-600/20 backdrop-blur-sm border border-green-400/30 hover:border-green-400/50 transition-all duration-500 hover:scale-105">
              <div class="aspect-[4/3] bg-gradient-to-br from-green-400/40 to-blue-500/40 flex items-center justify-center relative overflow-hidden">
                <div class="absolute inset-0 bg-gradient-to-br from-green-400/60 to-blue-500/60 flex items-center justify-center">
                  <svg class="w-16 h-16 text-white/80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                </div>
                <div class="absolute inset-0 bg-black/40 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center">
                  <button class="bg-white/20 backdrop-blur-sm text-white px-4 py-2 rounded-lg border border-white/30 hover:bg-white/30 transition-all duration-300">
                    View Full Size
                  </button>
                </div>
              </div>
              <div class="p-4">
                <h3 class="text-lg font-semibold text-green-200 mb-2">Youth Leadership Camp</h3>
                <p class="text-blue-100 text-sm">Young innovators learning about water sustainability</p>
              </div>
            </div>
  
            <!-- Photo 5 -->
            <div class="group relative overflow-hidden rounded-2xl bg-gradient-to-br from-purple-500/20 to-pink-600/20 backdrop-blur-sm border border-purple-400/30 hover:border-purple-400/50 transition-all duration-500 hover:scale-105">
              <div class="aspect-[4/3] bg-gradient-to-br from-purple-400/40 to-pink-500/40 flex items-center justify-center relative overflow-hidden">
                <div class="absolute inset-0 bg-gradient-to-br from-purple-400/60 to-pink-500/60 flex items-center justify-center">
                  <svg class="w-16 h-16 text-white/80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                </div>
                <div class="absolute inset-0 bg-black/40 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center">
                  <button class="bg-white/20 backdrop-blur-sm text-white px-4 py-2 rounded-lg border border-white/30 hover:bg-white/30 transition-all duration-300">
                    View Full Size
                  </button>
                </div>
              </div>
              <div class="p-4">
                <h3 class="text-lg font-semibold text-purple-200 mb-2">Panel Discussion</h3>
                <p class="text-blue-100 text-sm">Experts discussing water policy and innovation</p>
              </div>
            </div>
  
            <!-- Photo 6 -->
            <div class="group relative overflow-hidden rounded-2xl bg-gradient-to-br from-orange-500/20 to-red-600/20 backdrop-blur-sm border border-orange-400/30 hover:border-orange-400/50 transition-all duration-500 hover:scale-105">
              <div class="aspect-[4/3] bg-gradient-to-br from-orange-400/40 to-red-500/40 flex items-center justify-center relative overflow-hidden">
                <div class="absolute inset-0 bg-gradient-to-br from-orange-400/60 to-red-500/60 flex items-center justify-center">
                  <svg class="w-16 h-16 text-white/80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                </div>
                <div class="absolute inset-0 bg-black/40 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center">
                  <button class="bg-white/20 backdrop-blur-sm text-white px-4 py-2 rounded-lg border border-white/30 hover:bg-white/30 transition-all duration-300">
                    View Full Size
                  </button>
                </div>
              </div>
              <div class="p-4">
                <h3 class="text-lg font-semibold text-orange-200 mb-2">Networking Reception</h3>
                <p class="text-blue-100 text-sm">Building connections in the water innovation community</p>
              </div>
            </div>
          </div>
  
          <!-- Gallery Navigation -->
          <div class="text-center mt-12">
            <div class="flex justify-center space-x-4">
              <button class="px-6 py-3 bg-gradient-to-r from-cyan-500/20 to-blue-500/20 border border-cyan-400/30 text-cyan-300 rounded-lg hover:from-cyan-500/30 hover:to-blue-500/30 transition-all duration-300">
                Load More Photos
              </button>
              <button class="px-6 py-3 bg-gradient-to-r from-indigo-500/20 to-purple-500/20 border border-indigo-400/30 text-indigo-300 rounded-lg hover:from-indigo-500/30 hover:to-blue-500/30 transition-all duration-300">
                View All Events
              </button>
            </div>
          </div>
        </div>
      </section>