---
import TodayTomorrow from '@infographic/TodayTomorrow.astro';
import OpeningQuotes from '@icons/opening-quotes.svg';
import ClosingQuotes from '@icons/closing-quotes.svg';
import Rhetoric from '@infographic/Rhetoric.astro';
import RhetoricOneLine from '@infographic/Rhetoric--OneLine.astro';
import MissionStatement from './MissionStatement.astro';
import MoreThanCrisisCallToAction from '@core-messages/MoreThanCrisisCallToAction.astro';
import UnsiloedFinance from '@core-messages/Unsiloed-Finance--Bedazzled.astro';
import SystemsThinkers from './SystemsThinkers.astro';
---

<section class="relative py-20 bg-gradient-to-br from-slate-700 via-blue-700 to-teal-700 overflow-hidden" style="margin-bottom: 0;">
  <!-- Subtle Background Pattern -->
  <div class="absolute inset-0 opacity-5">
    <div class="absolute inset-0" style="background-image: radial-gradient(circle at 25% 25%, white 1px, transparent 1px), radial-gradient(circle at 75% 75%, white 1px, transparent 1px); background-size: 50px 50px;"></div>
  </div>
  
  <div class="relative z-10 max-w-6xl mx-auto px-6">
    <!-- Header -->
    <div class="text-center mb-16">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-light text-white mb-8 tracking-wide">
        Who <span class="text-cyan-300 font-normal">We Are</span>
      </h1>
      <div class="w-32 h-px bg-gradient-to-r from-transparent via-blue-400 to-transparent mx-auto"></div>
    </div>
     
    <!-- Opening Statement -->
    <RhetoricOneLine />

    <!-- Blue Economy & Finance Forum Photo -->
    <div class="text-center mb-16">
      <div class="max-w-2xl mx-auto">
        <img 
          src="/headshots/blue-economy-forum-monaco-2025.jpg" 
          alt="Christoph Schwager and Verena Sturm at the Blue Economy & Finance Forum Monaco 2025" 
          class="w-full h-auto rounded-2xl shadow-2xl border border-white/20"
        />
        <p class="text-lg text-blue-200 mt-4 font-light italic">
          Christoph Schwager and Verena Sturm representing The Water Foundation at the Blue Economy & Finance Forum Monaco 2025
        </p>
      </div>
    </div>

    <!-- Mission Statement -->
    <MissionStatement />

    <SystemsThinkers />

    <!-- Earth Image and Call to Action -->
    <MoreThanCrisisCallToAction />

    <!-- Investment Verticals Section -->
    <UnsiloedFinance />
      
    <!-- Redefining Water Solutions Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl lg:text-6xl font-light text-white mb-8 tracking-wide">
        Redefining <span class="text-cyan-300 font-normal">Water Solutions</span>
      </h2>
      <p class="text-xl text-blue-200 max-w-3xl mx-auto font-light">
        A new paradigm for water security, resilience, and prosperity
      </p>
      <div class="w-32 h-px bg-gradient-to-r from-transparent via-blue-400 to-transparent mx-auto mt-8"></div>
    </div>
  

 

    <!-- Quote Section -->
    <div class="relative my-20 py-12 px-8">
      <!-- Opening quote SVG -->
      <div class="absolute -top-4 left-0 w-24 h-24 text-cyan-400/20 -z-10">
        <OpeningQuotes class="w-full h-full" />
      </div>
      
      <Rhetoric />
      
      <!-- Closing quote SVG -->
      <div class="absolute -bottom-4 right-0 w-24 h-24 text-cyan-400/20 -z-10 transform rotate-180">
        <ClosingQuotes class="w-full h-full" />
      </div>
    </div>

    <!-- Blue Economy & Finance Forum Photo with New Text -->
    <div class="grid md:grid-cols-2 gap-12 items-center mb-20">
      <!-- Photo - Left Side -->
      <div class="text-center">
        <a href="https://beff2025monaco.org/programme/provisional-programme" target="_blank" rel="noopener noreferrer" class="block group">
          <img 
            src="/headshots/blue-economy-forum-monaco-2025.jpg" 
            alt="Christoph Schwager and Verena Sturm at the Blue Economy & Finance Forum Monaco 2025" 
            class="w-full max-w-lg mx-auto h-auto rounded-2xl shadow-2xl border border-white/20 group-hover:shadow-blue-400/50 transition-all duration-300"
          />
          <p class="text-lg text-blue-200 mt-4 font-light italic group-hover:text-cyan-300 transition-colors duration-300">
            Christoph Schwager and Verena Sturm representing The Water Foundation at the Blue Economy & Finance Forum Monaco 2025
          </p>
        </a>
      </div>
      
      <!-- New Text - Right Side -->
      <div class="space-y-6">
        <h2 class="text-4xl font-light text-white mb-6">
          We commit to <span class="text-cyan-300 font-normal">tangible change</span>
        </h2>
        <p class="text-xl text-blue-100 leading-relaxed font-light">
          We want to create real and measurable transformation. To achieve this, we connect the brightest minds, set priorities, provide action impulses, and thus create sustainable and effective results.
        </p>
        <div class="pt-4">
          <a href="/about" class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-cyan-400 to-blue-500 text-white rounded-lg hover:from-cyan-500 hover:to-blue-600 transition-all duration-300 font-semibold">
            About The Water Foundation
            <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
    
    <TodayTomorrow />
    
    <div class="w-24 h-1 bg-primary mx-auto my-8"></div>

      <div class="max-w-3xl mx-auto text-center">
        <a href="/about" class="inline-flex items-center px-6 py-8 bg-primary text-white rounded-lg hover:bg-primary/90 transition-colors">
          Join Our Mission
          <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
          </svg>
        </a>
      </div>
    </section>
