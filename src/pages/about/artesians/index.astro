---
import BaseThemeLayout from '../../../layouts/BaseThemeLayout.astro';
import SignUpForThis from '../../../components/basics/signups/SignUpForThis.astro';
import Bullet1 from '../../../components/basics/bullets/Bullet--Variant1.astro';
import Bullet2 from '../../../components/basics/bullets/Bullet--Variant2.astro';
import Bullet3 from '../../../components/basics/bullets/Bullet--Variant3.astro';
import AnimatedWaterBackground from '../../../components/ui/AnimatedWaterBackground.astro';
---

<BaseThemeLayout
  title="The Artesians: a select group of influential supporters of The Water Foundation"
  description="The Water Foundation's Artesians"
  ogImage="/ogImageLandscape__The-Water-Foundation.jpg"
  ogImagePortrait="/ogImagePortrait__The-Water-Foundation.jpg"
>
  <section class="relative py-16 px-4 bg-gradient-to-br from-slate-800 via-blue-800 to-teal-800 overflow-hidden">
    <!-- Animated Water Background -->
    <AnimatedWaterBackground intensity="subtle" pattern="scattered" />
    
    <div class="relative z-10 max-w-7xl mx-auto">
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-white mb-4">The Artesians</h1>
        <p class="text-xl text-blue-200 max-w-3xl mx-auto">
          A select group of influential supporters of The Water Foundation.
          <br />
          <br />
          Bringing the network to network capital.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Supporter Card 1 -->
        <div class="group transform transition-all duration-500 hover:scale-105">
          <div class="bg-gradient-to-br from-cyan-500/10 to-blue-500/10 backdrop-blur-sm border border-cyan-400/30 rounded-2xl p-8 h-full hover:bg-cyan-500/15 hover:border-cyan-400/50 transition-all duration-500">
            <div class="mb-6 text-center">
              <Bullet1 index="01" className="group-hover:scale-110 transition-transform duration-300" />
            </div>
            <h3 class="text-2xl font-bold text-cyan-300 mb-4 text-center">Visionary Partners</h3>
            <p class="text-blue-100 text-center flex-grow">
              Join our network of forward-thinking individuals committed to sustainable water solutions.
            </p>
          </div>
        </div>

        <!-- Supporter Card 2 -->
        <div class="group transform transition-all duration-500 hover:scale-105">
          <div class="bg-gradient-to-br from-teal-500/10 to-emerald-500/10 backdrop-blur-sm border border-teal-400/30 rounded-2xl p-8 h-full hover:bg-teal-500/15 hover:border-teal-400/50 transition-all duration-500">
            <div class="mb-6 text-center">
              <Bullet2 index="02" className="group-hover:scale-110 transition-transform duration-300" />
            </div>
            <h3 class="text-2xl font-bold text-teal-300 mb-4 text-center">Transformative Impact</h3>
            <p class="text-blue-100 text-center flex-grow">
              Collaborate with industry leaders and experts driving meaningful change in water conservation.
            </p>
          </div>
        </div>

        <!-- Supporter Card 3 -->
        <div class="group transform transition-all duration-500 hover:scale-105">
          <div class="bg-gradient-to-br from-purple-500/10 to-pink-500/10 backdrop-blur-sm border border-purple-400/30 rounded-2xl p-8 h-full hover:bg-purple-500/15 hover:border-purple-400/50 transition-all duration-500">
            <div class="mb-6 text-center">
              <Bullet2 index="03" className="group-hover:scale-110 transition-transform duration-300" />
            </div>
            <h3 class="text-2xl font-bold text-purple-300 mb-4 text-center">Global Network</h3>
            <p class="text-blue-100 text-center flex-grow">
              Connect with a diverse community passionate about water security and innovation.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- NEW: Invitation to Join the Artesian Circle Section -->
  <section class="relative py-20 bg-gradient-to-br from-slate-700 via-blue-700 to-teal-700 overflow-hidden">
    <!-- Animated Water Background -->
    <AnimatedWaterBackground intensity="moderate" pattern="clustered" />
    
    <div class="relative z-10 max-w-6xl mx-auto px-6 text-center">
      <h2 class="text-3xl md:text-5xl font-light text-white mb-8 tracking-wide">
        Invitation to Join the <span class="text-cyan-300 font-normal">Artesian Circle</span>
      </h2>
      <p class="text-xl text-blue-200 mb-8 font-light max-w-4xl mx-auto">
        A Founding Community for Global Water Leadership
      </p>
      <p class="text-lg text-blue-100 mb-12 font-light max-w-3xl mx-auto leading-relaxed">
        An exclusive network of leading families from across the world, united to secure humanity's most vital resource: water.
      </p>

      <!-- Membership Benefits Grid -->
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12 max-w-6xl mx-auto">
        <!-- Recognition -->
        <div class="group transform transition-all duration-500 hover:scale-105">
          <div class="bg-gradient-to-br from-amber-500/10 to-yellow-500/10 backdrop-blur-sm border border-amber-400/30 rounded-2xl p-6 h-full hover:bg-amber-500/15 hover:border-amber-400/50 transition-all duration-500">
            <div class="w-12 h-12 bg-gradient-to-br from-amber-400 to-yellow-400 rounded-xl flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-amber-300 mb-3">Recognition</h3>
            <p class="text-blue-100 text-sm leading-relaxed">
              Recognition as a Founding Patron of The Water Foundation, publicly acknowledged at UNGA 2025, COP30, and global forums.
            </p>
          </div>
        </div>

        <!-- Access -->
        <div class="group transform transition-all duration-500 hover:scale-105">
          <div class="bg-gradient-to-br from-blue-500/10 to-indigo-500/10 backdrop-blur-sm border border-blue-400/30 rounded-2xl p-6 h-full hover:bg-blue-500/15 hover:border-blue-400/50 transition-all duration-500">
            <div class="w-12 h-12 bg-gradient-to-br from-blue-400 to-indigo-400 rounded-xl flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-blue-300 mb-3">Access</h3>
            <p class="text-blue-100 text-sm leading-relaxed">
              Private briefings with global leaders, policy-makers, and innovators shaping the future of water, energy, and natural capital.
            </p>
          </div>
        </div>

        <!-- Legacy -->
        <div class="group transform transition-all duration-500 hover:scale-105">
          <div class="bg-gradient-to-br from-green-500/10 to-emerald-500/10 backdrop-blur-sm border border-green-400/30 rounded-2xl p-6 h-full hover:bg-green-500/15 hover:border-green-400/50 transition-all duration-500">
            <div class="w-12 h-12 bg-gradient-to-br from-green-400 to-emerald-400 rounded-xl flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-green-300 mb-3">Legacy</h3>
            <p class="text-blue-100 text-sm leading-relaxed">
              Influence the design of global water strategies and support ventures that protect and restore water systems for generations.
            </p>
          </div>
        </div>

        <!-- Global Reach -->
        <div class="group transform transition-all duration-500 hover:scale-105">
          <div class="bg-gradient-to-br from-purple-500/10 to-pink-500/10 backdrop-blur-sm border border-purple-400/30 rounded-2xl p-6 h-full hover:bg-purple-500/15 hover:border-purple-400/50 transition-all duration-500">
            <div class="w-12 h-12 bg-gradient-to-br from-purple-400 to-pink-400 rounded-xl flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-purple-300 mb-3">Global Reach</h3>
            <p class="text-blue-100 text-sm leading-relaxed">
              Direct links to our hubs in Dubai, Delhi, Munich and to our diplomatic partnerships in over 30 countries.
            </p>
          </div>
        </div>

        <!-- Impact -->
        <div class="group transform transition-all duration-500 hover:scale-105">
          <div class="bg-gradient-to-br from-cyan-500/10 to-teal-500/10 backdrop-blur-sm border border-cyan-400/30 rounded-2xl p-6 h-full hover:bg-cyan-500/15 hover:border-cyan-400/50 transition-all duration-500">
            <div class="w-12 h-12 bg-gradient-to-br from-cyan-400 to-teal-400 rounded-xl flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-cyan-300 mb-3">Impact</h3>
            <p class="text-blue-100 text-sm leading-relaxed">
              Catalyse scalable, high-technology solutions for the world's most urgent water challenges — from safe drinking water to industrial water reuse.
            </p>
          </div>
        </div>
      </div>

      <!-- Exclusive Membership Statement -->
      <div class="bg-gradient-to-r from-cyan-500/10 via-blue-500/10 to-teal-500/10 backdrop-blur-sm border border-cyan-400/30 rounded-3xl p-8 max-w-4xl mx-auto">
        <p class="text-lg text-cyan-200 font-light leading-relaxed">
          <span class="text-cyan-300 font-semibold">Membership is by invitation only</span> — limited to 50 families globally, forming the cornerstone of our founding circle.
        </p>
      </div>

      <!-- Call to Action -->
      <div class="mt-12">
        <a href="mailto:info@thewaterfoundation.org" class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-cyan-500 to-blue-500 text-white font-light text-lg rounded-2xl hover:from-cyan-600 hover:to-blue-600 transform hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-xl">
          <span>Request Invitation</span>
          <svg class="ml-3 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <section class="relative py-16 px-40 bg-gradient-to-br from-slate-600 via-blue-600 to-teal-600 overflow-hidden">
    <!-- Animated Water Background -->
    <AnimatedWaterBackground intensity="subtle" pattern="flowing" />
    
    <div class="relative z-10">
      <SignUpForThis 
        title="Join the Artesians"
        description="Be part of a select group of influential supporters. See us at the World Economic Forum, COP (Conference of the Parties), Future Investment Initiative and other global events."
        buttonText="Join the Artesians"
      />
    </div>
  </section>
</BaseThemeLayout>
