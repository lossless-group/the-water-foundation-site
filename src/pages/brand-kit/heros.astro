---
import BaseThemeLayout from '../../layouts/BaseThemeLayout.astro';
import Hero from "../../components/basics/heros/Hero.astro";
---

<BaseThemeLayout>
   <!-- Full-Featured Hero -->
   <Hero 
   contextSetterTxt="Global Impact"
   headerTxt="The Water Foundation"
   subHeaderTxt="Water independence for 1 billion people by 2035"
   supportingCopyTxt="Water underpins 70% of global GDP and 100% of food production, yet receives less than .01% of institutional capital."
   ctaTxt="The world needs our focus."
   targetActionsArray={[
      { text: "Dive In", href: "/reasearch", variant: "primary" },
      { text: "Why Care?", href: "/mission", variant: "secondary" },
      { text: "Partner with Us", href: "/partner-with-us", variant: "accent", external: true }
   ]}
   backgroundsArray={[
      {
         type: "image",
         src: "/imageOf__Whale.jpg",
         overlay: true,
         overlayOpacity: 0.1,
         overlayGradient: "linear-gradient(135deg, rgba(20, 184, 166, 0.8) 0%, rgba(6, 182, 212, 0.6) 50%, rgba(59, 130, 246, 0.4) 100%)"
      },
   ]}
   />


   <!-- Simple Hero -->
   <Hero 
   headerTxt="Transform Water Access"
   subHeaderTxt="Building sustainable water solutions worldwide"
   />


   <!-- Full-Featured Hero -->
   <Hero 
   contextSetterTxt="Global Impact"
   headerTxt="Clean Water for Everyone"
   subHeaderTxt="Join our mission to provide sustainable water access"
   supportingCopyTxt="Through innovative technology and community partnerships, we're creating lasting solutions for water scarcity worldwide."
   ctaTxt="Ready to make a difference?"
   targetActionsArray={[
      { text: "Get Involved", href: "/get-involved", variant: "primary" },
      { text: "Learn More", href: "/about", variant: "secondary" },
      { text: "Donate Now", href: "/donate", variant: "accent", external: true }
   ]}
   backgroundsArray={[{
      type: "image",
      src: "/imageOf__Whale--Overlayed-Light.png",
      overlay: true,
      overlayOpacity: 0.1,
      overlayGradient: "linear-gradient(135deg, rgba(20, 184, 166, 0.8) 0%, rgba(6, 182, 212, 0.6) 50%, rgba(59, 130, 246, 0.4) 100%)"
   }]}
   />


   <!-- Full-Featured Hero -->
   <Hero 
   contextSetterTxt="Global Impact"
   headerTxt="Clean Water for Everyone"
   subHeaderTxt="Join our mission to provide sustainable water access"
   supportingCopyTxt="Through innovative technology and community partnerships, we're creating lasting solutions for water scarcity worldwide."
   ctaTxt="Ready to make a difference?"
   targetActionsArray={[
      { text: "Get Involved", href: "/get-involved", variant: "primary" },
      { text: "Learn More", href: "/about", variant: "secondary" },
      { text: "Donate Now", href: "/donate", variant: "accent", external: true }
   ]}
   backgroundsArray={[{
      type: "gradient",
      gradient: "from-accent-50 to-primary-100",
      overlay: true,
      overlayOpacity: 0.1
   }]}
   />

   <!-- Full-Featured Hero -->
   <Hero 
   contextSetterTxt="Global Impact"
   headerTxt="Clean Water for Everyone"
   subHeaderTxt="Join our mission to provide sustainable water access"
   supportingCopyTxt="Through innovative technology and community partnerships, we're creating lasting solutions for water scarcity worldwide."
   ctaTxt="Ready to make a difference?"
      targetActionsArray={[
         { text: "Get Involved", href: "/get-involved", variant: "primary" },
         { text: "Learn More", href: "/about", variant: "secondary" },
         { text: "Donate Now", href: "/donate", variant: "accent", external: true }
      ]}
      backgroundsArray={[
         {
            type: "gif",
            src: "https://i.imgur.com/KnZFCHf.gif",
            overlay: true,
            overlayOpacity: 0.6,
            overlayGradient: "linear-gradient(135deg, rgba(20, 184, 166, 0.8) 0%, rgba(6, 182, 212, 0.6) 50%, rgba(59, 130, 246, 0.4) 100%)"
         },
         {
            type: "gif",
            src: "https://i.imgur.com/3UucdJZ.gif",
            overlay: true,
            overlayOpacity: 0.6,
            overlayGradient: "linear-gradient(135deg, rgba(20, 184, 166, 0.8) 0%, rgba(6, 182, 212, 0.6) 50%, rgba(59, 130, 246, 0.4) 100%)"
         }
      ]}
      />

</BaseThemeLayout>