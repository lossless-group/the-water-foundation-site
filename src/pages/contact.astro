---
import BaseThemeLayout from '@layouts/BaseThemeLayout.astro';
---

<BaseThemeLayout
  title="Contact | The Water Foundation"
  description="Get in touch with The Water Foundation team for partnerships, inquiries, and collaboration opportunities."
  themeClass="theme-water"
  containerClass="max-w-4xl mx-auto"
>
  <main class="min-h-screen" style="background-color: var(--color-background);">
    <div class="max-w-4xl mx-auto px-6 py-16">
      
      <section class="bg-white rounded-2xl shadow-lg border border-gray-100 p-8 mb-12">
        <h1 class="text-4xl font-light text-gray-900 mb-8 border-b border-gray-200 pb-4">
          Contact Us
        </h1>
        
        <div class="space-y-8">
          <div>
            <h2 class="text-2xl font-semibold text-gray-800 mb-4">Get In Touch</h2>
            <p class="text-gray-700 leading-relaxed">
              Whether you're interested in partnerships, investment opportunities, or collaboration, we'd love to hear from you.
            </p>
          </div>

          <div class="grid md:grid-cols-2 gap-8">
            <div class="bg-gradient-to-br from-blue-50 to-teal-50 rounded-lg p-6 border border-blue-100">
              <h3 class="text-xl font-semibold text-gray-800 mb-4">General Inquiries</h3>
              <div class="space-y-3">
                <div class="flex items-center space-x-3">
                  <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                  <a href="mailto:info@the-water-foundation.com" class="text-blue-600 hover:text-blue-800">
                    info@the-water-foundation.com
                  </a>
                </div>
                <div class="flex items-center space-x-3">
                  <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                  <a href="tel:+4917624851089" class="text-blue-600 hover:text-blue-800">
                    +49 (0) 17624851089
                  </a>
                </div>
              </div>
            </div>

            <div class="bg-gradient-to-br from-teal-50 to-cyan-50 rounded-lg p-6 border border-teal-100">
              <h3 class="text-xl font-semibold text-gray-800 mb-4">Partnerships</h3>
              <div class="space-y-3">
                <div class="flex items-center space-x-3">
                  <svg class="w-5 h-5 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                  </svg>
                  <a href="mailto:partners@the-water-foundation.com" class="text-teal-600 hover:text-teal-800">
                    partners@the-water-foundation.com
                  </a>
                </div>
              </div>
            </div>
          </div>

          <div class="bg-gray-50 rounded-lg p-6">
            <h3 class="text-lg font-semibold text-gray-800 mb-3">Office Locations</h3>
            <div class="space-y-4 text-gray-700">
              <div>
                <p class="font-medium text-gray-900">Dubai, UAE</p>
                <p>The Water Foundation</p>
              </div>
              <div>
                <p class="font-medium text-gray-900">Delhi, India</p>
                <p>The Water Foundation</p>
              </div>
              <div>
                <p class="font-medium text-gray-900">Vaduz, Liechtenstein</p>
                <p>The Water Foundation</p>
              </div>
              <div>
                <p class="font-medium text-gray-900">Munich, Germany</p>
                <p>The Water Foundation GmbH</p>
                <p>Ludwig-Ganghofer Str. 4</p>
                <p>82031 Gr√ºnwald</p>
              </div>
            </div>
          </div>
        </div>
      </section>

    </div>
  </main>
</BaseThemeLayout>

<style>
  a {
    transition: color 0.2s ease;
  }
</style>

