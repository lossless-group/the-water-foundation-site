---
import BaseThemeLayout from '../../layouts/BaseThemeLayout.astro';
import ArrowContainer from '../../components/infographic/ArrowContainer.astro';
---

<BaseThemeLayout 
  title="Arrow Container Test | The Water Foundation"
  description="Test page for arrow container component."
  themeClass="theme-water"
  containerClass="max-w-7xl mx-auto"
  ogImage="/ogImageLandscape__The-Water-Foundation.jpg"
  ogImagePortrait="/ogImagePortrait__The-Water-Foundation.jpg"
>
  <div class="min-h-screen bg-background p-8">
    <h1 class="text-3xl font-bold text-foreground mb-8">Arrow Container Test</h1>
    
    <div class="space-y-4 max-w-2xl">
      <ArrowContainer title="Test Arrow 1" description="This is a test of the arrow container component with some sample text to see how it renders." />
      
      <ArrowContainer title="Test Arrow 2" description="Another test arrow with different content to verify the component works properly." />
      
      <ArrowContainer title="Test Arrow 3" description="A third test arrow to check spacing and alignment." />
      
      <div class="mt-8">
        <ArrowContainer>
          <p class="text-white mb-4">This is a test with slot content instead of props.</p>
          <a href="#" class="text-cyan-300 hover:underline">Test link</a>
        </ArrowContainer>
      </div>
    </div>
  </div>
</BaseThemeLayout>
