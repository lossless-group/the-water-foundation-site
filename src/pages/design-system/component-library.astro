---
import BaseThemeLayout from '../../layouts/BaseThemeLayout.astro';
import MessageCardRow from '../../layouts/sections/message-grids/MessageCardRow.astro';
import UnsiloedFinanceColumn from '../../layouts/sections/core-messages/UnsiloedFinanceColumn--Base.astro';
import Timeline from '../../layouts/sections/Timeline.astro';
import BrandTableDisplay from '@layouts/sections/tables/BrandTableDisplay.astro';
import IndicatorsGrid from '../../components/infographic/IndicatorsGrid.astro';
import { Code } from 'astro/components';
import IndicatorCard from '../../components/infographic/IndicatorCard.astro';
import Chip from '@components/basics/chips/Chip.astro';
import ChipHope from '@components/basics/chips/Chip--Hope.astro';
import ChipAnimated from '@components/basics/chips/Chip--Animated.astro';
import FactCardDemo from '@components/design-system/demos/FactCardDemo.astro';
import AtCrisisPointJumbo from '../../components/marketing/AtCrisisPoint--Jumbo.astro';

const timelineExample = [
  {
    title: 'Desalination',
    body: 'Advanced technologies addressing water scarcity with unprecedented efficiency.',
    color: 'primary',
  },
  {
    title: 'Advanced Treatment',
    body: 'Next-generation wastewater treatment solutions creating circular water economies.',
    color: 'blue',
  },
  {
    title: 'PFAS Destruction',
    body: 'Breakthrough technologies eliminating forever chemicals from water systems.',
    color: 'teal',
  },
];

// Sample facts data for component preview
const sampleFacts = [
  {
    id: 'fact-1',
    slug: 'water-scarcity',
    body: 'Water scarcity affects 40% of the global population and is projected to increase.',
    collection: 'facts' as const,
    data: {
      type: 'Fact' as const,
      index: 1,
      title: 'Global Water Crisis',
      zinger: 'Water scarcity affects billions',
      companion_image_url: '/heroes/imageOf__Whale-pair-under-wave.jpeg',
      sources: [{ org: 'UN Water', title: 'World Water Report 2023', url: 'https://unwater.org' }]
    },
    render: async () => ({ 
      Content: () => {
        const content = 'Water scarcity affects 40% of the global population and is projected to increase.';
        return content;
      }
    })
  },
  {
    id: 'fact-2', 
    slug: 'ocean-plastic',
    body: 'Over 8 million tons of plastic waste enter our oceans every year.',
    collection: 'facts' as const,
    data: {
      type: 'Fact' as const,
      index: 2,
      title: 'Ocean Pollution',
      zinger: 'Plastic pollution crisis',
      companion_image_url: '/heroes/imageOf__Whale-pair-under-wave.jpeg',
      sources: [{ org: 'Ocean Conservancy', url: 'https://oceanconservancy.org' }]
    },
    render: async () => ({ 
      Content: () => {
        const content = 'Over 8 million tons of plastic waste enter our oceans every year.';
        return content;
      }
    })
  }
] as any;
---

<BaseThemeLayout
  title="Component Library - The Water Foundation"
  description="Visual showcase of reusable components and design patterns"
  ogImage="/ogImageLandscape__The-Water-Foundation.jpg"
  ogImagePortrait="/ogImagePortrait__The-Water-Foundation.jpg"
>
  <main class="min-h-screen bg-background">
    
    <!-- Header -->
    <section class="py-12 px-4 bg-gradient-to-br from-primary/5 to-blue-600/5 border-b border-border">
      <div class="max-w-7xl mx-auto text-center">
        <h1 class="text-5xl font-bold text-foreground mb-4">
          🧩 Component Library
        </h1>
        <p class="text-xl text-muted-foreground max-w-3xl mx-auto mb-8">
          Visual showcase of reusable components powering The Water Foundation website
        </p>
        <div class="flex justify-center gap-4 text-sm">
          <div class="px-3 py-1 bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-300 rounded-full">
            29 Components
          </div>
          <div class="px-3 py-1 bg-blue-100 dark:bg-blue-900/30 text-blue-700 dark:text-blue-300 rounded-full">
            6 Categories
          </div>
          <div class="px-3 py-1 bg-purple-100 dark:bg-purple-900/30 text-purple-700 dark:text-purple-300 rounded-full">
            Live Previews
          </div>
        </div>
      </div>
    </section>

    <!-- Component Categories -->
    <section class="py-16 px-4">
      <div class="max-w-7xl mx-auto space-y-20">

        <!-- Core Messages Category -->
        <div class="component-category">
          <div class="text-center mb-12">
            <h2 class="text-4xl font-bold text-foreground mb-4">
              💬 Core Messages
            </h2>
            <p class="text-lg text-muted-foreground">
              Large-scale narrative sections that tell our story
            </p>
            <div class="mt-4 text-sm text-muted-foreground">
              9 components • Hero sections, crisis messaging, transformation stories
            </div>
          </div>

          <div class="grid gap-8">
            <!-- Crisis Point Preview -->
            <div class="component-showcase bg-card border border-border rounded-2xl p-8 hover:shadow-xl transition-all duration-500">
              <div class="flex items-center justify-between mb-6">
                <div>
                  <h3 class="text-2xl font-semibold text-foreground">AtCrisisPoint--Jumbo</h3>
                  <p class="text-muted-foreground">Full-screen crisis messaging with visual impact</p>
                </div>
                <div class="flex gap-2">
                  <span class="px-2 py-1 bg-red-100 dark:bg-red-900/30 text-red-700 dark:text-red-300 text-xs rounded">Crisis</span>
                  <span class="px-2 py-1 bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 text-xs rounded">Jumbo</span>
                </div>
              </div>
              <AtCrisisPointJumbo 
                title="The Critical Resource Crisis"
                titleHighlight="Resource"
                description="Water is quickly becoming the world's most critical resource..."
                indicatorText="Crisis Indicator"
              />
            </div>

            <!-- Transformation Preview -->
            <div class="component-showcase bg-card border border-border rounded-2xl p-8 hover:shadow-xl transition-all duration-500">
              <div class="flex items-center justify-between mb-6">
                <div>
                  <h3 class="text-2xl font-semibold text-foreground">InvestInTransformation--Jumbo</h3>
                  <p class="text-muted-foreground">Hopeful transformation messaging with animations</p>
                </div>
                <div class="flex gap-2">
                  <ChipHope>Hope</ChipHope>
                  <ChipAnimated>Animated</ChipAnimated>
                </div>
              </div>
              <div class="bg-gradient-to-br from-green-950/5 to-background rounded-xl p-8 border border-green-500/10">
                <div class="grid lg:grid-cols-2 gap-8 items-center">
                  <div class="flex justify-center">
                    <div class="bg-gradient-to-br from-green-500/15 to-blue-500/15 rounded-xl p-6 text-center">
                      <div class="text-4xl font-black text-green-400 mb-4">→</div>
                      <div class="text-sm font-semibold text-foreground">Innovation</div>
                    </div>
                  </div>
                  <div>
                    <h4 class="text-3xl font-bold text-foreground mb-4">
                      More Than <span class="text-green-400">A Crisis</span>
                    </h4>
                    <p class="text-muted-foreground">This is a call to invest in the future...</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Message Grids Category -->
        <div class="component-category">
          <div class="text-center mb-12">
            <h2 class="text-4xl font-bold text-foreground mb-4">
              📊 Message Grids
            </h2>
            <p class="text-lg text-muted-foreground">
              Structured data displays and metric showcases
            </p>
            <div class="mt-4 text-sm text-muted-foreground">
              8 components • Cards, metrics, columnar layouts, facts display
            </div>
          </div>

          <div class="grid gap-8">
            <!-- Message Card Row -->
            <div class="component-showcase bg-card border border-border rounded-2xl p-8 hover:shadow-xl transition-all duration-500">
              <div class="flex items-center justify-between mb-6">
                <div>
                  <h3 class="text-2xl font-semibold text-foreground">MessageCardRow</h3>
                  <p class="text-muted-foreground">Key metrics display with hover animations</p>
                </div>
                <div class="flex gap-2">
                  <span class="px-2 py-1 bg-blue-100 dark:bg-blue-900/30 text-blue-700 dark:text-blue-300 text-xs rounded">Metrics</span>
                  <span class="px-2 py-1 bg-purple-100 dark:bg-purple-900/30 text-purple-700 dark:text-purple-300 text-xs rounded">Interactive</span>
                </div>
              </div>
              <div class="scale-75 origin-top">
                <MessageCardRow sectionClass="py-4" containerClass="max-w-full" />
              </div>
            </div>

            <!-- Unsiloed Finance Column -->
            <div class="component-showcase bg-card border border-border rounded-2xl p-8 hover:shadow-xl transition-all duration-500">
              <div class="flex items-center justify-between mb-6">
                <div>
                  <h3 class="text-2xl font-semibold text-foreground">UnsiloedFinanceColumn</h3>
                  <p class="text-muted-foreground">Investment verticals with color-coded categories</p>
                </div>
                <div class="flex gap-2">
                  <span class="px-2 py-1 bg-cyan-100 dark:bg-cyan-900/30 text-cyan-700 dark:text-cyan-300 text-xs rounded">Finance</span>
                  <span class="px-2 py-1 bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-300 text-xs rounded">Reusable</span>
                </div>
              </div>
              <div class="max-w-md">
                <UnsiloedFinanceColumn containerClass="bg-background border border-border rounded-xl p-6" />
              </div>
            </div>

            <!-- Facts Grid -->
            <div class="component-showcase bg-card border border-border rounded-2xl p-8 hover:shadow-xl transition-all duration-500">
              <div class="flex items-center justify-between mb-6">
                <div>
                  <h3 class="text-2xl font-semibold text-foreground">FactsGrid</h3>
                  <p class="text-muted-foreground">Responsive grid layout for displaying water facts</p>
                </div>
                <div class="flex gap-2">
                  <span class="px-2 py-1 bg-blue-100 dark:bg-blue-900/30 text-blue-700 dark:text-blue-300 text-xs rounded">Facts</span>
                  <span class="px-2 py-1 bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-300 text-xs rounded">Grid</span>
                </div>
              </div>
              <div class="bg-background rounded-xl border border-border overflow-hidden p-6">
                <div class="text-center mb-6">
                  <h4 class="text-xl font-bold text-foreground mb-2">Sample Water Facts</h4>
                  <p class="text-muted-foreground text-sm">Visual preview of facts grid layout</p>
                </div>
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 scale-75 origin-top">
                  <!-- Mock Fact Card 1 -->
                  <div class="bg-card border border-border rounded-xl shadow-sm overflow-hidden">
                    <div class="w-full h-32 bg-gradient-to-br from-blue-500/20 to-cyan-500/20 flex items-center justify-center">
                      <div class="text-blue-400 text-2xl">🌊</div>
                    </div>
                    <div class="p-4">
                      <div class="text-xs text-foreground/60 uppercase tracking-wide mb-1">Fact 1</div>
                      <h5 class="text-sm font-semibold text-foreground mb-2">Global Water Crisis</h5>
                      <p class="text-xs text-foreground/80 leading-relaxed">Water scarcity affects 40% of the global population...</p>
                      <div class="mt-3 pt-2 border-t border-border/60">
                        <span class="text-xs text-primary">UN Water</span>
                      </div>
                    </div>
                  </div>
                  <!-- Mock Fact Card 2 -->
                  <div class="bg-card border border-border rounded-xl shadow-sm overflow-hidden">
                    <div class="w-full h-32 bg-gradient-to-br from-green-500/20 to-teal-500/20 flex items-center justify-center">
                      <div class="text-green-400 text-2xl">🐋</div>
                    </div>
                    <div class="p-4">
                      <div class="text-xs text-foreground/60 uppercase tracking-wide mb-1">Fact 2</div>
                      <h5 class="text-sm font-semibold text-foreground mb-2">Ocean Pollution</h5>
                      <p class="text-xs text-foreground/80 leading-relaxed">Over 8 million tons of plastic waste enter our oceans...</p>
                      <div class="mt-3 pt-2 border-t border-border/60">
                        <span class="text-xs text-primary">Ocean Conservancy</span>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Fact Card -->
            <div class="component-showcase bg-card border border-border rounded-2xl p-8 hover:shadow-xl transition-all duration-500">
              <div class="flex items-center justify-between mb-6">
                <div>
                  <h3 class="text-2xl font-semibold text-foreground">FactCard--w-Image</h3>
                  <p class="text-muted-foreground">Individual fact card with image and source attribution</p>
                </div>
                <div class="flex gap-2">
                  <span class="px-2 py-1 bg-cyan-100 dark:bg-cyan-900/30 text-cyan-700 dark:text-cyan-300 text-xs rounded">Card</span>
                  <span class="px-2 py-1 bg-purple-100 dark:bg-purple-900/30 text-purple-700 dark:text-purple-300 text-xs rounded">Image</span>
                </div>
              </div>
              <div class="max-w-sm">
                <!-- Mock Fact Card -->
                <div class="bg-card border border-border rounded-xl shadow-sm overflow-hidden">
                  <div class="w-full h-40 bg-gradient-to-br from-blue-500/20 to-cyan-500/20 flex items-center justify-center">
                    <div class="text-blue-400 text-4xl">🌊</div>
                  </div>
                  <div class="p-5">
                    <div class="text-xs text-foreground/60 uppercase tracking-wide mb-1">Fact 1</div>
                    <h5 class="text-lg font-semibold text-foreground mb-3">Global Water Crisis</h5>
                    <p class="text-sm text-foreground/80 leading-relaxed mb-4">Water scarcity affects 40% of the global population and is projected to increase with climate change and population growth.</p>
                    <div class="pt-3 border-t border-border/60">
                      <span class="text-xs text-primary hover:underline cursor-pointer">UN Water: "World Water Report 2023"</span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Infographics Category -->
        <div class="component-category">
          <div class="text-center mb-12">
            <h2 class="text-4xl font-bold text-foreground mb-4">
              📊 Infographics
            </h2>
            <p class="text-xl text-muted-foreground max-w-3xl mx-auto">
              Data visualization components for water-related statistics and indicators
            </p>
          </div>

          <div class="grid gap-8">
            <!-- Indicators Grid -->
            <div class="component-showcase bg-card border border-border rounded-2xl p-8 hover:shadow-xl transition-all duration-500">
              <div class="flex items-center justify-between mb-6">
                <div>
                  <h3 class="text-2xl font-semibold text-foreground">IndicatorsGrid</h3>
                  <p class="text-muted-foreground">Responsive grid of key water indicators with severity levels</p>
                </div>
                <div class="px-3 py-1 text-sm font-medium rounded-full bg-primary/10 text-primary">
                  New
                </div>
              </div>
              
              <div class="mt-6">
                <IndicatorsGrid class="max-w-4xl mx-auto" />
              </div>

              <div class="mt-6 pt-6 border-t border-border space-y-6">
                <div>
                  <h4 class="font-medium text-foreground mb-3">Basic Usage</h4>
                  <div class="bg-muted/50 p-4 rounded-lg overflow-auto max-w-full">
                    <div class="min-w-[500px] w-full">
                      <Code 
                        code={`// 1. Import the component
import IndicatorsGrid from '@components/infographic/IndicatorsGrid.astro';

// 2. Use with default indicators
<IndicatorsGrid />`} 
                        lang="astro"
                        theme="github-dark"
                        class="!bg-transparent !p-0 text-sm leading-snug w-full"
                      />
                    </div>
                  </div>
                </div>

                <div>
                  <h4 class="font-medium text-foreground mb-3">Custom Data</h4>
                  <div class="bg-muted/50 p-4 rounded-lg overflow-auto max-w-full">
                    <div class="min-w-[500px] w-full">
                      <Code 
                        code={`// 1. Define your indicators data
const customIndicators = [
  {
    severity: 'critical',  // 'critical' | 'severe' | 'opportunity'
    title: 'Water Scarcity',
    value: '2.2B',
    description: 'people without access',
    source: 'UN Water, 2023'
  },
  // ... more indicators
];

// 2. Pass data to the component
<IndicatorsGrid indicators={customIndicators} />`} 
                        lang="typescript"
                        theme="github-dark"
                        class="!bg-transparent !p-0 text-sm leading-snug w-full"
                      />
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Indicator Card -->
            <div class="component-showcase bg-card border border-border rounded-2xl p-8 hover:shadow-xl transition-all duration-500">
              <div class="flex items-center justify-between mb-6">
                <div>
                  <h3 class="text-2xl font-semibold text-foreground">IndicatorCard</h3>
                  <p class="text-muted-foreground">Individual indicator card component with severity levels</p>
                </div>
                <div class="px-3 py-1 text-sm font-medium rounded-full bg-primary/10 text-primary">
                  New
                </div>
              </div>
              
              <div class="mt-6">
                <div class="grid md:grid-cols-2 gap-6">
                  <IndicatorCard
                    severity="critical"
                    title="Water Scarcity"
                    value="2.2B"
                    description="People affected globally"
                    source="UN Water, 2023"
                    class="h-full"
                  />
                  <IndicatorCard
                    severity="opportunity"
                    title="Market Growth"
                    value="$1T+"
                    description="Water tech market by 2030"
                    source="BNEF, 2023"
                    class="h-full"
                  />
                </div>
              </div>

              <div class="mt-6 pt-6 border-t border-border space-y-6">
                <div>
                  <h4 class="font-medium text-foreground mb-3">Basic Usage</h4>
                  <div class="bg-muted/50 p-4 rounded-lg overflow-auto max-w-full">
                    <div class="min-w-[500px] w-full">
                      <Code 
                        code={`// 1. Import the component
import IndicatorCard from '@components/infographic/IndicatorCard.astro';

// 2. Use with required props
<IndicatorCard
  severity="critical"  // 'critical' | 'severe' | 'opportunity'
  title="Water Scarcity"
  value="2.2B"
  description="People affected globally"
  source="UN Water, 2023"
  class="custom-class"  // Optional: Add custom classes
/>`} 
                        lang="typescript"
                        theme="github-dark"
                        class="!bg-transparent !p-0 text-sm leading-snug w-full"
                      />
                    </div>
                  </div>
                </div>

                <div>
                  <h4 class="font-medium text-foreground mb-3">Props</h4>
                  <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-border">
                      <thead class="bg-muted/50">
                        <tr>
                          <th class="px-4 py-2 text-left text-xs font-medium text-foreground/70 uppercase tracking-wider">Prop</th>
                          <th class="px-4 py-2 text-left text-xs font-medium text-foreground/70 uppercase tracking-wider">Type</th>
                          <th class="px-4 py-2 text-left text-xs font-medium text-foreground/70 uppercase tracking-wider">Required</th>
                          <th class="px-4 py-2 text-left text-xs font-medium text-foreground/70 uppercase tracking-wider">Description</th>
                        </tr>
                      </thead>
                      <tbody class="divide-y divide-border bg-card">
                        <tr>
                          <td class="px-4 py-2 text-sm text-foreground/90">severity</td>
                          <td class="px-4 py-2 text-sm text-foreground/70">'critical' | 'severe' | 'opportunity'</td>
                          <td class="px-4 py-2 text-sm text-foreground/70">Yes</td>
                          <td class="px-4 py-2 text-sm text-foreground/70">Determines the color and styling of the indicator</td>
                        </tr>
                        <tr>
                          <td class="px-4 py-2 text-sm text-foreground/90">title</td>
                          <td class="px-4 py-2 text-sm text-foreground/70">string</td>
                          <td class="px-4 py-2 text-sm text-foreground/70">Yes</td>
                          <td class="px-4 py-2 text-sm text-foreground/70">The main title of the indicator</td>
                        </tr>
                        <tr>
                          <td class="px-4 py-2 text-sm text-foreground/90">value</td>
                          <td class="px-4 py-2 text-sm text-foreground/70">string</td>
                          <td class="px-4 py-2 text-sm text-foreground/70">Yes</td>
                          <td class="px-4 py-2 text-sm text-foreground/70">The main value to display (e.g., '2.2B', '74%')</td>
                        </tr>
                        <tr>
                          <td class="px-4 py-2 text-sm text-foreground/90">description</td>
                          <td class="px-4 py-2 text-sm text-foreground/70">string</td>
                          <td class="px-4 py-2 text-sm text-foreground/70">Yes</td>
                          <td class="px-4 py-2 text-sm text-foreground/70">Short description of what the value represents</td>
                        </tr>
                        <tr>
                          <td class="px-4 py-2 text-sm text-foreground/90">source</td>
                          <td class="px-4 py-2 text-sm text-foreground/70">string</td>
                          <td class="px-4 py-2 text-sm text-foreground/70">Yes</td>
                          <td class="px-4 py-2 text-sm text-foreground/70">Data source attribution</td>
                        </tr>
                        <tr>
                          <td class="px-4 py-2 text-sm text-foreground/90">class</td>
                          <td class="px-4 py-2 text-sm text-foreground/70">string</td>
                          <td class="px-4 py-2 text-sm text-foreground/70">No</td>
                          <td class="px-4 py-2 text-sm text-foreground/70">Additional CSS classes to apply</td>
                        </tr>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Data Display Category -->
        <div class="component-category">
          <div class="text-center mb-12">
            <h2 class="text-4xl font-bold text-foreground mb-4">
              📊 Data Display
            </h2>
            <p class="text-xl text-muted-foreground max-w-3xl mx-auto">
              Components for presenting data and information in a structured way
            </p>
          </div>

          <div class="grid gap-8">
            <!-- Fact Cards -->
            <div class="component-showcase bg-card border border-border rounded-2xl p-8 hover:shadow-xl transition-all duration-500">
              <div class="flex items-center justify-between mb-6">
                <div>
                  <h3 class="text-2xl font-semibold text-foreground">FactCard</h3>
                  <p class="text-muted-foreground">Display facts with source attribution</p>
                </div>
                <div class="flex gap-2">
                  <span class="px-2 py-1 bg-cyan-100 dark:bg-cyan-900/30 text-cyan-700 dark:text-cyan-300 text-xs rounded">Card</span>
                  <span class="px-2 py-1 bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-300 text-xs rounded">Fact</span>
                </div>
              </div>

              <!-- Demo -->
              <div class="mt-6">
                <FactCardDemo client:load />
              </div>

              <!-- Usage -->
              <div class="mt-6 pt-6 border-t border-border space-y-6">
                <div>
                  <h4 class="font-medium text-foreground mb-3">Basic Usage</h4>
                  <div class="bg-muted/50 p-4 rounded-lg overflow-auto max-w-full">
                    <div class="min-w-[500px] w-full">
                      <Code 
                        code={`// 1. Import the component
import FactCard from '@components/facts/FactCard.astro';
import FactCardWithImage from '@components/facts/FactCard--w-Image.astro';

// 2. Use with a content collection entry
<FactCard entry={entry} />

// 3. Or with the image variant
<FactCardWithImage entry={entry} />`} 
                        lang="typescript"
                        theme="github-dark"
                        class="!bg-transparent !p-0 text-sm leading-snug w-full"
                      />
                    </div>
                  </div>
                </div>

                <div>
                  <h4 class="font-medium text-foreground mb-3">Content Collection Example</h4>
                  <div class="bg-muted/50 p-4 rounded-lg overflow-auto max-w-full">
                    <div class="min-w-[500px] w-full">
                      <Code 
                        code={`// 1. In your content/config.ts
export const collections = {
  facts: defineCollection({
    type: 'data',
