---
// New Creative Homepage Variant
import BaseThemeLayout from '../layouts/BaseThemeLayout.astro';
import HeroCenteredLogoMobilePopOut from '../components/basics/heros/HeroCenteredLogo--MobilePopOut.astro';
import BlindSpotStoryVariant2 from '../layouts/sections/core-messages/BlindSpotV2.astro';
import WhoWeAreExtendedV3 from '../layouts/sections/who-we-are/WhoWeAreExtendedV3.astro';
import AtCrisisPoint from '../layouts/sections/core-messages/AtCrisisPoint--Jumbo.astro';
import InvestInTransformation from '../layouts/sections/core-messages/InvestInTransformation--Jumbo.astro';
import SolutionSurge from '../layouts/sections/core-messages/SolutionSurge--Jumbo.astro';
import UnsiloedFinance from '../layouts/sections/core-messages/UnsiloedFinance--Jumbo.astro';
import InnovationToScale from '../layouts/sections/core-messages/InnovationToScale--Jumbo.astro';
import GlobalFootprint from '../layouts/sections/message-grids/GlobalFootprintRowTags.astro';
import ArrowContainer from '../components/infographic/ArrowContainer.astro';
---

<BaseThemeLayout
  title="The Water Foundation - Tackling Humanity's Core Blind Spot"
  description="We bring together exceptional people to tackle water scarcity through innovation, collaboration, and strategic action. Water is the last big scarcity play."
  themeClass="theme-water"
  containerClass="max-w-none mx-auto"
  ogImage="/ogImageLandscape__The-Water-Foundation.jpg"
  ogImagePortrait="/ogImagePortrait__The-Water-Foundation.jpg"
>
  <main class="overflow-x-hidden font-avenir">
    
    <!-- Full-Width Hero Section with Enhanced Animations -->
    <section class="relative overflow-hidden">
      <!-- Animated Background Elements -->
      <div class="absolute inset-0 z-0">
        <!-- Floating Water Particles -->
        <div class="absolute top-20 left-20 w-3 h-3 bg-blue-400/40 rounded-full animate-float opacity-60"></div>
        <div class="absolute top-40 right-32 w-2 h-2 bg-teal-400/40 rounded-full animate-float-delay opacity-40"></div>
        <div class="absolute bottom-32 left-1/4 w-4 h-4 bg-cyan-400/40 rounded-full animate-float-slow opacity-50"></div>
        <div class="absolute top-1/2 right-1/3 w-1 h-1 bg-blue-300/40 rounded-full animate-float-fast opacity-30"></div>
        <div class="absolute top-1/3 left-1/3 w-2 h-2 bg-teal-300/40 rounded-full animate-float-delay-2 opacity-35"></div>
        <div class="absolute bottom-1/3 right-1/4 w-3 h-3 bg-cyan-300/40 rounded-full animate-float-slow-2 opacity-45"></div>
        
        <!-- Gradient Orbs -->
        <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-gradient-to-br from-blue-600/10 to-transparent rounded-full blur-3xl animate-pulse-slow"></div>
        <div class="absolute bottom-1/4 right-1/4 w-80 h-80 bg-gradient-to-br from-teal-600/10 to-transparent rounded-full blur-3xl animate-pulse-delay"></div>
        <div class="absolute top-1/2 left-1/2 w-64 h-64 bg-gradient-to-br from-cyan-600/8 to-transparent rounded-full blur-2xl animate-pulse-slow-2"></div>
      </div>

      <!-- Existing Hero Component -->
      <HeroCenteredLogoMobilePopOut 
        contextSetterTxt="Global Impact"
        headerLogoSrc="/trademark__The-Water-Foundation--Darker--Wide.svg"
        headerTxt="Water independence for 1 billion people by 2035"
        subHeaderTxt="Securing our water future through innovation, investment, and impact."
        supportingCopyTxt="The Water Foundation is pioneering a new approach to water security that combines cutting-edge technology, blended & sustainable finance, and networked capital to create lasting solutions."
        targetActionsArray={[
          { 
            text: 'Think with Us', 
            href: '/nerd-out/on-water', 
            type: 'accent',
            size: 'md',
            external: false
          },
          { 
            text: 'Invest with Us', 
            href: '/about', 
            type: 'primary',
            size: 'md',
            external: false
          },
          { 
            text: 'Partner with Us', 
            href: '/partners', 
            type: 'secondary',
            size: 'md',
            external: false
          }
        ]}
        backgroundsArray={[
          { 
            type: 'image', 
            src: '/heroes/imageOf__Whale-pair-under-wave.jpeg',
            overlay: true,
            overlayOpacity: 0.1,
            overlayGradient: 'linear-gradient(135deg, rgba(20, 184, 166, 0.8) 0%, rgba(6, 182, 212, 0.6) 50%, rgba(59, 130, 246, 0.4) 100%)'
          }
        ]}
        paddingClasses="py-8 md:py-12 lg:py-16"
      >
      </HeroCenteredLogoMobilePopOut>
    </section>

    <!-- Enhanced Blind Spot Story -->
    <section class="relative py-20 sm:py-24 md:py-32 overflow-visible bg-gradient-to-br from-slate-900 via-blue-900 to-teal-900">
      <div class="relative z-10 max-w-6xl mx-auto px-6">
        <div class="text-center mb-16">
            
            <h3 class="mb-8 text-4xl lg:text-5xl xl:text-6xl font-light text-white uppercase tracking-widest leading-tight">
              THE WATER FOUNDATION IS SET UP TO TACKLE A CORE BLIND SPOT OF HUMANKIND.
            </h3>
            
            <!-- Collaboration Locations -->
            <div class="mb-12">
              <p class="text-lg text-blue-200 mb-6 font-light tracking-wide">Collaborating from</p>
              <div class="flex flex-wrap justify-center gap-8">
                <div class="group transform transition-all duration-500 hover:scale-105">
                  <div class="px-6 py-3 bg-white/5 backdrop-blur-md border border-white/10 rounded-2xl hover:bg-white/10 hover:border-white/20 transition-all duration-500">
                    <span class="text-blue-200 font-light text-lg tracking-wide">Dubai</span>
                  </div>
                </div>
                <div class="group transform transition-all duration-500 hover:scale-105">
                  <div class="px-6 py-3 bg-white/5 backdrop-blur-md border border-white/10 rounded-2xl hover:bg-white/10 hover:border-white/20 transition-all duration-500">
                    <span class="text-teal-200 font-light text-lg tracking-wide">Delhi</span>
                  </div>
                </div>
                <div class="group transform transition-all duration-500 hover:scale-105">
                  <div class="px-6 py-3 bg-white/5 backdrop-blur-md border border-white/10 rounded-2xl hover:bg-white/10 hover:border-white/20 transition-all duration-500">
                    <span class="text-cyan-200 font-light text-lg tracking-wide">Vaduz</span>
                  </div>
                </div>
                <div class="group transform transition-all duration-500 hover:scale-105">
                  <div class="px-6 py-3 bg-white/5 backdrop-blur-md border border-white/10 rounded-2xl hover:bg-white/10 hover:border-white/20 transition-all duration-500">
                    <span class="text-indigo-200 font-light text-lg tracking-wide">Munich</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Elegant BlindSpot Content Section -->
          <div class="w-full overflow-visible">
            <div class="relative py-16 lg:py-20">
              <div class="max-w-7xl mx-auto px-6">
                <div class="grid lg:grid-cols-2 gap-16 items-center">
                  
                  <!-- Left Column - Visual Impact -->
                  <div class="text-center lg:text-left">
                    <div class="relative mb-8">
                      <div class="text-6xl lg:text-8xl font-light mb-6 tracking-tight" style="color: #22d3ee !important;">
                        WATER
                      </div>
                      <div class="w-32 h-px bg-gradient-to-r from-cyan-400 to-blue-400 mx-auto lg:mx-0 mb-8" style="background: linear-gradient(to right, #22d3ee, #3b82f6);"></div>
                    </div>
                    <h2 class="text-2xl lg:text-3xl text-blue-100 font-light leading-tight max-w-sm mx-auto lg:mx-0">
                      The defining issue of our time
                    </h2>
                  </div>
                  
                  <!-- Right Column - Content -->
                  <div class="space-y-8">
                    <div>
                      <h3 class="text-3xl lg:text-4xl font-light text-white mb-6 leading-tight">
                        Humanity's Biggest Blind Spot
                      </h3>
                      <p class="text-lg text-blue-200 mb-8 font-light">
                        The unrecognised consequences:
                      </p>
                      
                      <!-- Impact Cards -->
                      <div class="space-y-6">
                        <div class="group transform transition-all duration-500 hover:scale-105">
                          <div class="bg-white/5 backdrop-blur-xl border border-white/10 rounded-2xl p-6 hover:bg-white/10 hover:border-white/20 transition-all duration-300">
                            <h4 class="text-xl font-light text-cyan-300 mb-3">Financing Mismatch</h4>
                            <p class="text-blue-100 leading-relaxed font-light">
                              90% of climate adaptation needs are water-based, yet less than 5% of climate finance is directed toward water.
                            </p>
                          </div>
                        </div>
                        
                        <div class="group transform transition-all duration-500 hover:scale-105">
                          <div class="bg-white/5 backdrop-blur-xl border border-white/10 rounded-2xl p-6 hover:bg-white/10 hover:border-white/20 transition-all duration-300">
                            <h4 class="text-xl font-light text-blue-300 mb-3">Resilience Gap</h4>
                            <p class="text-blue-100 leading-relaxed font-light">
                              Wide-open weak spots in water strategies and implementation.
                            </p>
                          </div>
                        </div>
                        
                        <div class="group transform transition-all duration-500 hover:scale-105">
                          <div class="bg-white/5 backdrop-blur-xl border border-white/10 rounded-2xl p-6 hover:bg-white/10 hover:border-white/20 transition-all duration-300">
                            <h4 class="text-xl font-light text-teal-300 mb-3">Asset Neglect</h4>
                            <p class="text-blue-100 leading-relaxed font-light">
                              Water assets are underpriced, fragmented, and underprotected.
                            </p>
                          </div>
                        </div>
                      </div>
                    </div>
                    
                    <!-- Call to Action -->
                    <div class="pt-8 border-t border-white/10">
                      <p class="text-lg text-blue-200 mb-6 leading-relaxed font-light">
                        The Water Foundation is stepping up to fill this gap at a systems level, utilizing systems level & first principles thinking.
                      </p>
                      <a href="/about" class="inline-flex items-center text-cyan-300 font-light text-lg hover:text-cyan-200 transition-colors group">
                        Learn about our approach
                        <svg class="ml-3 w-5 h-5 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www/w3.org/2000/svg">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                        </svg>
                      </a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

    <hr class="my-16 border-t border-border/30 max-w-4xl mx-auto" />

    <!-- Who We Are - Variant 3 -->
    <div>
      <WhoWeAreExtendedV3 />
    </div>

    <!-- Elegant Investment Opportunity Section -->
    <section class="relative py-24 bg-gradient-to-br from-slate-800 via-blue-800 to-teal-800 overflow-hidden">
      <!-- Subtle Background Pattern -->
      <div class="absolute inset-0 opacity-5">
        <div class="absolute inset-0" style="background-image: radial-gradient(circle at 25% 25%, white 1px, transparent 1px), radial-gradient(circle at 75% 75%, white 1px, transparent 1px); background-size: 50px 50px;"></div>
      </div>
      
      <div class="max-w-6xl mx-auto px-6">
        <div class="text-center mb-20">
          <!-- Elegant Divider -->
          <div class="w-32 h-px bg-gradient-to-r from-transparent via-blue-400 to-transparent mx-auto mb-8"></div>
          
          <h2 class="text-4xl md:text-5xl lg:text-6xl font-light text-white mb-8 tracking-wide">
            The <span class="text-cyan-300 font-normal">Investment Opportunity</span> of Our Time
          </h2>
          <p class="text-xl text-blue-200 max-w-3xl mx-auto font-light leading-relaxed">
            Water is the last big scarcity play - where innovation meets impact meets returns
          </p>
          
          <!-- Elegant Divider -->
          <div class="w-32 h-px bg-gradient-to-r from-transparent via-blue-400 to-transparent mx-auto mt-8"></div>
        </div>
        
        <!-- Elegant Investment Metrics -->
        <div class="grid md:grid-cols-3 gap-10 mb-20">
          <div class="group transform transition-all duration-700 hover:scale-105 hover:-translate-y-3">
            <div class="bg-white/5 backdrop-blur-xl border border-white/10 rounded-3xl p-10 h-full hover:bg-white/10 hover:border-white/20 transition-all duration-700">
              <div class="text-5xl font-light text-cyan-300 mb-4">$1T+</div>
              <h3 class="text-xl font-light text-white mb-4 tracking-wide">Water Tech Market by 2030</h3>
              <p class="text-blue-200 text-sm font-light leading-relaxed">Global water technology market projected to exceed USD 1 trillion</p>
            </div>
          </div>
          
          <div class="group transform transition-all duration-700 hover:scale-105 hover:-translate-y-3">
            <div class="bg-white/5 backdrop-blur-xl border border-white/10 rounded-3xl p-10 h-full hover:bg-white/10 hover:border-white/20 transition-all duration-700">
              <div class="text-5xl font-light text-blue-300 mb-4">$114B</div>
              <h3 class="text-xl font-light text-white mb-4 tracking-wide">Annual Investment Gap</h3>
              <p class="text-blue-200 text-sm font-light leading-relaxed">Required annually until 2030 to achieve SDG 6</p>
            </div>
          </div>
          
          <div class="group transform transition-all duration-700 hover:scale-105 hover:-translate-y-3">
            <div class="bg-white/5 backdrop-blur-xl border border-white/10 rounded-3xl p-10 h-full hover:bg-white/10 hover:border-white/20 transition-all duration-700">
              <div class="text-5xl font-light text-teal-300 mb-4">300K+</div>
              <h3 class="text-xl font-light text-white mb-4 tracking-wide">Lives at Risk Annually</h3>
              <p class="text-blue-200 text-sm font-light leading-relaxed">Children under 5 die from water-related diseases</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Our Investment Verticals Section -->
    <section class="relative py-24 bg-gradient-to-br from-slate-600 via-blue-600 to-teal-600 overflow-hidden">
      <div class="max-w-7xl mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="text-4xl md:text-5xl lg:text-6xl font-light text-white mb-8 tracking-wide">
            Our <span class="text-purple-300 font-normal">Investment Verticals</span>
          </h2>
          <p class="text-xl text-blue-100 max-w-3xl mx-auto font-light">
            Strategic focus areas where we deploy capital and expertise to maximize impact and returns
          </p>
        </div>
        
        <!-- Investment Verticals Grid -->
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
          <!-- Water Treatment & Purification -->
          <div class="group transform transition-all duration-500 hover:scale-105 hover:-translate-y-2">
            <div class="bg-white/10 backdrop-blur-xl border border-white/20 rounded-2xl p-8 h-full hover:bg-white/15 transition-all duration-300">
              <div class="w-20 h-20 bg-gradient-to-br from-purple-500/30 to-purple-600/30 rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300">
                <div class="text-3xl">🔬</div>
              </div>
              <h3 class="text-2xl font-light text-white text-center mb-4">Water Treatment & Purification</h3>
              <p class="text-purple-100 text-center leading-relaxed mb-4">
                Advanced filtration, desalination, and contamination removal technologies
              </p>
              <div class="text-center">
                <span class="inline-block px-3 py-1 bg-purple-500/30 text-purple-200 text-sm font-light rounded-full border border-purple-400/50">
                  Core Focus
                </span>
              </div>
            </div>
          </div>
          
          <!-- Smart Water Infrastructure -->
          <div class="group transform transition-all duration-500 hover:scale-105 hover:-translate-y-2">
            <div class="bg-white/10 backdrop-blur-xl border border-white/20 rounded-2xl p-8 h-full hover:bg-white/15 transition-all duration-300">
              <div class="w-20 h-20 bg-gradient-to-br from-indigo-500/30 to-indigo-600/30 rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300">
                <div class="text-3xl">🏗️</div>
              </div>
              <h3 class="text-2xl font-light text-white text-center mb-4">Smart Water Infrastructure</h3>
              <p class="text-indigo-100 text-center leading-relaxed mb-4">
                IoT sensors, monitoring systems, and intelligent distribution networks
              </p>
              <div class="text-center">
                <span class="inline-block px-3 py-1 bg-indigo-500/30 text-indigo-200 text-sm font-light rounded-full border border-indigo-400/50">
                  Emerging
                </span>
              </div>
            </div>
          </div>
          
          <!-- Water Recycling & Reuse -->
          <div class="group transform transition-all duration-500 hover:scale-105 hover:-translate-y-2">
            <div class="bg-white/10 backdrop-blur-xl border border-white/20 rounded-2xl p-8 h-full hover:bg-white/15 transition-all duration-300">
              <div class="w-20 h-20 bg-gradient-to-br from-cyan-500/30 to-cyan-600/30 rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300">
                <div class="text-3xl">♻️</div>
              </div>
              <h3 class="text-2xl font-light text-white text-center mb-4">Water Recycling & Reuse</h3>
              <p class="text-cyan-100 text-center leading-relaxed mb-4">
                Circular economy solutions for industrial and municipal water systems
              </p>
              <div class="text-center">
                <span class="inline-block px-3 py-1 bg-cyan-500/30 text-cyan-200 text-sm font-light rounded-full border border-cyan-400/50">
                  High Growth
                </span>
              </div>
            </div>
          </div>
          
          <!-- Agricultural Water Solutions -->
          <div class="group transform transition-all duration-500 hover:scale-105 hover:-translate-y-2">
            <div class="bg-white/10 backdrop-blur-xl border border-white/20 rounded-2xl p-8 h-full hover:bg-white/15 transition-all duration-300">
              <div class="w-20 h-20 bg-gradient-to-br from-emerald-500/30 to-emerald-600/30 rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300">
                <div class="text-3xl">🌱</div>
              </div>
              <h3 class="text-2xl font-light text-white mb-4 text-center">Agricultural Water Solutions</h3>
              <p class="text-blue-100 text-center leading-relaxed mb-4">
                Precision irrigation, soil moisture management, and drought-resistant systems
              </p>
              <div class="text-center">
                <span class="inline-block px-3 py-1 bg-emerald-500/30 text-emerald-200 text-sm font-light rounded-full border border-emerald-400/50">
                  Strategic
                </span>
              </div>
            </div>
          </div>
          
          <!-- Climate-Resilient Water Systems -->
          <div class="group transform transition-all duration-500 hover:scale-105 hover:-translate-y-2">
            <div class="bg-white/10 backdrop-blur-xl border border-white/20 rounded-2xl p-8 h-full hover:bg-white/15 transition-all duration-300">
              <div class="w-20 h-20 bg-gradient-to-br from-teal-500/30 to-teal-600/30 rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300">
                <div class="text-3xl">🌊</div>
              </div>
              <h3 class="text-2xl font-light text-white text-center mb-4">Climate-Resilient Systems</h3>
              <p class="text-teal-100 text-center leading-relaxed mb-4">
                Adaptation technologies for extreme weather and climate change impacts
              </p>
              <div class="text-center">
                <span class="inline-block px-3 py-1 bg-teal-500/30 text-teal-200 text-sm font-light rounded-full border border-teal-400/50">
                  Future-Proof
                </span>
              </div>
            </div>
          </div>
          
          <!-- Water Data & Analytics -->
          <div class="group transform transition-all duration-500 hover:scale-105 hover:-translate-y-2">
            <div class="bg-white/10 backdrop-blur-xl border border-white/20 rounded-2xl p-8 h-full hover:bg-white/15 transition-all duration-300">
              <div class="w-20 h-20 bg-gradient-to-br from-blue-500/30 to-blue-600/30 rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300">
                <div class="text-3xl">📊</div>
              </div>
              <h3 class="text-2xl font-light text-white text-center mb-4">Water Data & Analytics</h3>
              <p class="text-blue-100 text-center leading-relaxed mb-4">
                AI-powered insights, predictive modeling, and decision support systems
              </p>
              <div class="text-center">
                <span class="inline-block px-3 py-1 bg-blue-500/30 text-blue-200 text-sm font-light rounded-full border border-blue-400/50">
                  Innovation
                </span>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Investment Strategy Summary -->
        <div class="text-center">
          <div class="bg-white/10 backdrop-blur-xl border border-white/20 rounded-2xl p-8 max-w-4xl mx-auto">
            <h3 class="text-2xl font-light text-white mb-4">Our Investment Strategy</h3>
            <p class="text-blue-100 leading-relaxed mb-6 font-light">
              We focus on <span class="text-cyan-300 font-normal">early-stage to growth-stage</span> companies that demonstrate 
              <span class="text-purple-300 font-normal">proven technology</span>, 
              <span class="text-green-300 font-normal">scalable business models</span>, and 
              <span class="text-blue-300 font-normal">measurable impact</span> on water security.
            </p>
            <div class="flex flex-wrap justify-center gap-4">
              <span class="px-4 py-2 bg-gradient-to-r from-blue-500/30 to-teal-500/30 text-white font-light rounded-full border border-blue-400/50">
                Seed to Series B
              </span>
              <span class="px-4 py-2 bg-gradient-to-r from-purple-500/30 to-indigo-500/30 text-white font-light rounded-full border border-purple-400/50">
                $500K - $10M
              </span>
              <span class="px-4 py-2 bg-gradient-to-r from-emerald-500/30 to-cyan-500/30 text-white font-light rounded-full border border-emerald-400/50">
                Global Focus
              </span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Creative Mission Preview -->
    <section class="relative py-24 bg-gradient-to-br from-slate-500 via-blue-500 to-teal-500 overflow-hidden">
      <div class="max-w-6xl mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="text-4xl md:text-5xl lg:text-6xl font-light text-white mb-8 tracking-wide">
            Our <span class="text-cyan-300 font-normal">Mission</span>
          </h2>
          <p class="text-xl text-blue-100 max-w-3xl mx-auto font-light">
            We bring together exceptional people who are impatient with the way things are and have the courage to act
          </p>
        </div>
        
        <!-- Creative Mission Flow -->
        <div class="relative">
          <!-- Connection Lines -->
          <div class="absolute top-1/2 left-0 right-0 h-0.5 bg-gradient-to-r from-transparent via-blue-400 to-transparent transform -translate-y-1/2"></div>
          
          <div class="grid md:grid-cols-3 gap-8 relative z-10">
            <div class="group transform transition-all duration-500 hover:scale-105">
              <div class="bg-white/10 backdrop-blur-xl border border-white/20 rounded-2xl p-8 h-full hover:bg-white/15 transition-all duration-300 text-center">
                <div class="w-20 h-20 bg-gradient-to-br from-blue-500/30 to-blue-600/30 rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300">
                  <div class="text-3xl">🚀</div>
                </div>
                <h3 class="text-2xl font-light text-white mb-4">Innovate</h3>
                <p class="text-blue-100 leading-relaxed font-light">
                  Embrace new ways of systems thinking across the water cycle and along the water tech stack
                </p>
              </div>
            </div>
            
            <div class="group transform transition-all duration-500 hover:scale-105">
              <div class="bg-white/10 backdrop-blur-xl border border-white/20 rounded-2xl p-8 h-full hover:bg-white/15 transition-all duration-300 text-center">
                <div class="w-20 h-20 bg-gradient-to-br from-teal-500/30 to-teal-600/30 rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300">
                  <div class="text-3xl">🌊</div>
