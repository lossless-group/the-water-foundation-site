---
import '../styles/global.css';
---

<html lang="en" class="theme-default">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Water Foundation</title>
		
		<!-- Google Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&family=Nunito:wght@300;400;700&family=Quicksand:wght@300;400;700&family=Fira+Code:wght@400;700&display=swap" rel="stylesheet">
		
		<style>
			/* Basic theme styles */
			.theme-default {
				--font-sans: var(--font-family-primary);
				--font-serif: var(--font-family-secondary);
				--font-mono: var(--font-family-mono);
				font-family: var(--font-sans);
			}
		</style>
	</head>
	<body class="bg-secondary-50 text-secondary-900 min-h-screen p-8">
		<div class="max-w-4xl mx-auto">
			<h1 class="text-4xl font-bold text-primary-600 mb-6">Water Foundation</h1>
			
			<div class="bg-white p-6 rounded-xl shadow-lg mb-8">
				<h2 class="text-2xl font-semibold text-secondary-800 mb-4">Welcome</h2>
				<p class="text-secondary-600 mb-4">
					Welcome to the Water Foundation project. This is a comprehensive theming system built with Astro and Tailwind CSS v4.
				</p>
				<div class="space-y-4">
					<div>
						<h3 class="text-lg font-medium text-secondary-800 mb-2">Available Pages:</h3>
						<ul class="space-y-2">
							<li>
								<a href="/brand-kit" class="text-primary-600 hover:text-primary-700 underline">
									Brand Kit & Theme System
								</a>
								<span class="text-secondary-500 ml-2">- Interactive theme and color system demo</span>
							</li>
						</ul>
					</div>
				</div>
			</div>

			<div class="bg-white p-6 rounded-xl shadow-lg">
				<h2 class="text-2xl font-semibold text-secondary-800 mb-4">Project Features</h2>
				<div class="grid grid-cols-1 md:grid-cols-2 gap-4">
					<div class="p-4 bg-primary-50 rounded-lg">
						<h3 class="font-medium text-primary-800 mb-2">Theme System</h3>
						<p class="text-primary-600 text-sm">Dual theme support with default and water themes</p>
					</div>
					<div class="p-4 bg-secondary-50 rounded-lg">
						<h3 class="font-medium text-secondary-800 mb-2">Dark/Light Mode</h3>
						<p class="text-secondary-600 text-sm">Complete dark and light mode implementation</p>
					</div>
					<div class="p-4 bg-accent-50 rounded-lg">
						<h3 class="font-medium text-accent-800 mb-2">Tailwind CSS v4</h3>
						<p class="text-accent-600 text-sm">Built with the latest Tailwind CSS v4 features</p>
					</div>
					<div class="p-4 bg-primary-50 rounded-lg">
						<h3 class="font-medium text-primary-800 mb-2">TypeScript Support</h3>
						<p class="text-primary-600 text-sm">Full TypeScript integration for better DX</p>
					</div>
				</div>
			</div>
		</div>
	</body>
</html>
