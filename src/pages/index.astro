---
import BaseThemeLayout from '../layouts/BaseThemeLayout.astro';
import HeroImageFocused from '../components/basics/Hero--ImageFocused.astro';
import MessageGridContent from '../layouts/sections/message-grids/MessageGridContent-Vnt2.astro';
import BlindSpotStoryVariant2 from '../layouts/sections/core-messages/BlindSpotV2.astro';
import WhoWeAreExtendedV1 from '../layouts/sections/who-we-are/WhoWeAreExtendedV1.astro';
import WhoWeAreExtendedV2 from '../layouts/sections/who-we-are/WhoWeAreExtendedV2.astro';
import WhoWeAreExtendedV3 from '../layouts/sections/who-we-are/WhoWeAreExtendedV3.astro';
import CrisisByNumbers from '../layouts/sections/core-messages/CrisisByNumbers.astro';
---

<BaseThemeLayout
	title="The Water Foundation - Water Independence for 1 Billion People by 2035"
	description="Water underpins 70% of global GDP and 100% of food production, yet receives less than .01% of institutional capital. Join our mission for global water independence."
	containerClass="w-full max-w-none p-0"
>
	<!-- Full-Width Hero Section -->
	<HeroImageFocused 
		contextSetterTxt="Global Impact"
		headerLogoSrc="/trademark__The-Water-Foundation--Darker--Wide.svg"
		headerTxt="A New Era for Water"
		subHeaderTxt="Securing our water future through innovation, investment, and impact."
		supportingCopyTxt="We are at a critical juncture where water scarcity threatens communities, economies, and ecosystems worldwide. The Water Foundation is pioneering a new approach to water security that combines cutting-edge technology, sustainable finance, and community engagement to create lasting solutions."
		targetActionsArray={[
			{ 
				text: 'Learn About Our Approach', 
				href: '#our-approach', 
				type: 'primary',
				size: 'md',
				external: false
			},
			{ 
				text: 'Join Our Mission', 
				href: '/get-involved', 
				type: 'secondary',
				size: 'md',
				external: false
			}
		]}
		backgroundsArray={[
			{ 
				type: 'image', 
				src: '/imageOf__Whale--Overlayed-Light.png',
				overlay: true,
				overlayOpacity: 0.1,
				overlayGradient: 'linear-gradient(135deg, rgba(20, 184, 166, 0.8) 0%, rgba(6, 182, 212, 0.6) 50%, rgba(59, 130, 246, 0.4) 100%)'
			}
		]}
		paddingClasses="py-8 md:py-12 lg:py-16"
	>
		<div slot="overlay" class="w-full max-w-6xl mx-auto px-4">
			<CrisisByNumbers />
		</div>
	</HeroImageFocused>

<!-- Blind Spot Story -->
<BlindSpotStoryVariant2 />

<hr class="my-16 border-t border-border/30 max-w-4xl mx-auto" />

<!-- Who We Are - Variant 1 -->
<div class="mb-16">
  <div class="text-center mb-12">
    <h3 class="text-2xl font-semibold text-foreground/80 mb-2">Variant 1: Storytelling Narrative</h3>
    <div class="w-16 h-0.5 bg-primary/30 mx-auto"></div>
  </div>
  <WhoWeAreExtendedV1 />
</div>

<hr class="my-16 border-t border-border/30 max-w-4xl mx-auto" />

<!-- Who We Are - Variant 2 -->
<div class="mb-16">
  <div class="text-center mb-12">
    <h3 class="text-2xl font-semibold text-foreground/80 mb-2">Variant 2: Impact Focused</h3>
    <div class="w-16 h-0.5 bg-blue-500/30 mx-auto"></div>
  </div>
  <WhoWeAreExtendedV2 />
</div>

<hr class="my-16 border-t border-border/30 max-w-4xl mx-auto" />

<!-- Who We Are - Variant 3 -->
<div>
  <div class="text-center mb-12">
    <h3 class="text-2xl font-semibold text-foreground/80 mb-2">Variant 3: Visual Timeline</h3>
    <div class="w-16 h-0.5 bg-teal-500/30 mx-auto"></div>
  </div>
  <WhoWeAreExtendedV3 />
</div>

</BaseThemeLayout>
