---
import BaseThemeLayout from '../layouts/BaseThemeLayout.astro';
import HeroCenteredLogoImageFocused from '../components/basics/HeroCenteredLogo--ImageFocused.astro';
import BlindSpotStoryVariant2 from '../layouts/sections/core-messages/BlindSpotV2.astro';
import WhoWeAreExtendedV3 from '../layouts/sections/who-we-are/WhoWeAreExtendedV3.astro';
import CrisisByNumbers from '../layouts/sections/core-messages/CrisisByNumbers.astro';
---

<BaseThemeLayout
	title="The Water Foundation - Water Independence for 1 Billion People by 2035"
	description="Water underpins 70% of global GDP and 100% of food production, yet receives less than .01% of institutional capital. Join our mission for global water independence."
	containerClass="w-full max-w-none p-0"
>
	<!-- Full-Width Hero Section -->
	<HeroCenteredLogoImageFocused 
		contextSetterTxt="Global Impact"
		headerLogoSrc="/trademark__The-Water-Foundation--Darker--Wide.svg"
		headerTxt="Improving the lives of 1 billion people through resilient access to clean water."
		subHeaderTxt="Securing our water future through innovation, investment, and impact."
		supportingCopyTxt="The Water Foundation is pioneering a new approach to water security that combines cutting-edge technology, blended & sustainable finance, and networked capital to create lasting solutions."
		targetActionsArray={[
			{ 
				text: 'Learn About Our Approach', 
				href: '#our-approach', 
				type: 'primary',
				size: 'md',
				external: false
			},
			{ 
				text: 'Join Our Mission', 
				href: '/get-involved', 
				type: 'secondary',
				size: 'md',
				external: false
			}
		]}
		backgroundsArray={[
			{ 
				type: 'image', 
				src: '/imageOf__Whale--Overlayed-Light.png',
				overlay: true,
				overlayOpacity: 0.1,
				overlayGradient: 'linear-gradient(135deg, rgba(20, 184, 166, 0.8) 0%, rgba(6, 182, 212, 0.6) 50%, rgba(59, 130, 246, 0.4) 100%)'
			}
		]}
		paddingClasses="py-8 md:py-12 lg:py-16"
	>

	</HeroImageFocused>

	<!-- Blind Spot Story -->
	<BlindSpotStoryVariant2 />


	<hr class="my-16 border-t border-border/30 max-w-4xl mx-auto" />


	<!-- Who We Are - Variant 3 -->
	<div>
	<WhoWeAreExtendedV3 />
	</div>

</BaseThemeLayout>
