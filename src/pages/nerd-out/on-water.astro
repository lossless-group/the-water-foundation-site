---
import BaseThemeLayout from '../../layouts/BaseThemeLayout.astro';
import FactsGrid from '../../components/facts/FactsGrid.astro';
import { getCollection } from 'astro:content';

const entries = (await getCollection('facts')).sort(
  (a, b) => a.data.index - b.data.index
);
---

<BaseThemeLayout
  title="Nerd Out on Water"
  description="Explore the counter-intuitive true facts about how water impacts livelihoods everywhere."
  ogImage="/ogImageLandscape__The-Water-Foundation.jpg"
  ogImagePortrait="/ogImagePortrait__The-Water-Foundation.jpg"
>
  <FactsGrid entries={entries} />
</BaseThemeLayout>