---
import BaseThemeLayout from '@layouts/BaseThemeLayout.astro';
import LogoGridOnly, { type LogoOnlyItem } from '@components/basics/grids/LogoGrid--LogoOnly.astro';
import partnersData from '../../content/page-content/partners.json';

const partners: LogoOnlyItem[] = (partnersData as any[]).map((p: any) => ({
  brand: p.conventionalName ?? p.officialName,
  lightMode: p.logoLightMode,
  darkMode: p.logoDarkMode,
  urlToPartnerSite: p.urlToPartnerSite,
}));
---
<BaseThemeLayout
  ogImage="/ogImageLandscape__The-Water-Foundation.jpg"
  ogImagePortrait="/ogImagePortrait__The-Water-Foundation.jpg"
  title="Key Partners for The Water Foundation Network"
  description="Explore our network of partners driving systemic change through innovative water solutions and unsiloed financial strategies."
>
  <LogoGridOnly partners={partners} />
</BaseThemeLayout>