---
/**
 * Slides Index Page
 * Lists available slide presentations
 */

import BaseThemeLayout from '../../layouts/BaseThemeLayout.astro';
import TitleSlidePreviewCard from '../../components/slides/TitleSlidePreviewCard.astro';

// For now, we'll hardcode available presentations
// In the future, this could be dynamic from content collections
const presentations = [
  {
    title: "The Water Fund",
    slug: "water-fund-variant-1", 
    description: "Systemic Solutions for Global Water Security - Complete presentation showcasing our approach to water investment challenges",
    date: "2025-08-13",
    icon: "ðŸ’§"
  },
  {
    title: "Sample Presentation",
    slug: "sample", 
    description: "A sample slide deck to test the Water Theme integration with RevealJS",
    date: "2025-08-13",
    icon: "ðŸŽ¯"
  }
];
---

<BaseThemeLayout 
  title="Presentations - TWF Site"
  description="Available slide presentations powered by RevealJS and Water Theme"
  themeClass="theme-water"
  containerClass="max-w-6xl mx-auto"
>
  <section class="mx-auto w-full max-w-6xl px-4 sm:px-6 lg:px-8 py-10 sm:py-14 md:py-20 space-y-8 md:space-y-12">
    <header class="space-y-2">
      <h1 class="text-4xl font-bold">Presentations</h1>
      <p class="text-lg opacity-80">Interactive slide presentations powered by RevealJS and Water Theme</p>
    </header>

    <main class="space-y-10">
      <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
        {presentations.map((presentation) => (
          <TitleSlidePreviewCard 
            title={presentation.title}
            description={presentation.description}
            slug={presentation.slug}
            date={presentation.date}
            icon={presentation.icon}
          />
        ))}
      </div>

      <div class="text-center pt-2">
        <p class="opacity-60 mb-2">
          All presentations support keyboard navigation, speaker notes, and fullscreen mode.
        </p>
        <p class="opacity-60 text-sm">
          Press <kbd class="keyboard-hint">F</kbd> for fullscreen, 
          <kbd class="keyboard-hint">S</kbd> for speaker notes, 
          or <kbd class="keyboard-hint">ESC</kbd> for overview.
        </p>
      </div>
    </main>
  </section>
</BaseThemeLayout>

  <style>
    /* Keyboard hint styling */
    .keyboard-hint {
      padding: 0.25rem 0.5rem;
      background: rgba(var(--color-primary-800), 0.8);
      border: 1px solid rgba(var(--color-accent-500), 0.3);
      border-radius: var(--radius-sm);
      font-family: var(--font-family-mono);
      font-size: 0.875em;
      color: rgb(var(--color-accent-300));
      display: inline-block;
      box-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
      margin: 0 0.125rem;
    }
  </style>

