---
import BaseThemeLayout from '@/components/BaseThemeLayout.astro';
import TeamGrid from '@/components/TeamGrid.astro';
import WhoWeAreTimeline from '@/components/WhoWeAreTimeline.astro';
import ProposeYourself from '@/components/ProposeYourself.astro';

const teamMembers = [
  {
    name: 'Divyaksshi Sharma',
    role: 'Program Manager, Water Resilience',
    image: '/headshots/headshotOf_Divyaksshi-Sharma.jpeg',
    bio: 'Divyaksshi Sharma is a dynamic program manager with a passion for water resilience and sustainable development. Her journey includes leading initiatives in Kenya through UNODC, establishing the ORF Middle East office in Dubai, participating in Cybercrime Convention negotiations at UNODC New York, and representing India at the UN Human Rights Council in Geneva. Her multilingual capabilities and editorial experience with the UBC Journal of International Affairs in Vancouver have refined her analytical skills, shaping multicultural discussions on global issues. Off the clock, Divyaksshi is passionate about learning new dancing styles, cricket matches, meditation, and equestrian. She loves making lists of things to do in a new country and in her free time, she\'s on a perpetual quest to discover the best food spots in all the 10 cities she has called home.',
    socialLinks: [
      { name: 'LinkedIn', href: 'https://linkedin.com', icon: 'linkedin' }
    ]
  },

  {
    name: 'Tilman Griesel',
    role: 'Product & Technology Strategist',
    image: '/headshots/headshotOf_Tilman-Griesel.jpeg',
    bio: 'Tilman Griesel is a seasoned product and technology strategist with over a decade of experience in building scalable, cross-platform communication systems and leading product design innovation. Currently at alfaviewÂ® Video Conferencing Systems, he drives product development initiatives and oversees the creation of seamless meeting experiences through user-centric design and agile methodologies.\n\nPreviously, Tilman played a key role in shaping alfaview\'s client architecture and leading the development of a reusable, cross-platform UI framework that has supported the company\'s growth to more than 70 team members. Before joining alfaview, he served as Lead Software Engineer at dozeo, where he helped develop a web-based video conferencing solution that was later acquired by one of Germany\'s largest education providers.\n\nWith a strong background in software architecture, product design, and UX strategy, Tilman combines technical expertise with a passion for creating scalable solutions that drive innovation and enhance user experiences.',
    socialLinks: [
      { name: 'LinkedIn', href: 'https://www.linkedin.com/in/griesel/?originalSubdomain=de', icon: 'linkedin' }
    ]
  }

];
---

<BaseThemeLayout
  ogImage="/ogImageLandscape__The-Water-Foundation.jpg"
  ogImagePortrait="/ogImagePortrait__The-Water-Foundation.jpg"
  title="The People of The Water Foundation"
  description="Meet our friendly team members who are passionate about bringing water resilience to 1 billion people."
>
  <main class="min-h-screen bg-gradient-to-b from-background to-background/50">
    <!-- Hero Section -->
    <section class="relative pt-20 pb-16 md:pt-24 md:pb-20 bg-gradient-to-r from-cyan-400 via-blue-500 to-indigo-600 overflow-hidden">
      <div class="relative z-10 container mx-auto px-4 text-center">
        <h1 class="text-5xl md:text-6xl font-extralight text-white mb-6 tracking-wider leading-tight">Our People</h1>
        <div class="w-32 h-px bg-gradient-to-r from-transparent via-white to-transparent mx-auto mb-8 opacity-60"></div>
        <p class="text-xl md:text-2xl text-white/90 max-w-4xl mx-auto leading-relaxed font-light">
          Meet our friendly team members who are passionate about bringing water resilience to 1 billion people.
        </p>
      </div>
    </section>

    <!-- Team Grid -->
    <section class="pt-0 pb-12 md:pt-0 md:pb-16">
      <TeamGrid teamMembers={teamMembers} />
    </section>

    <!-- Timeline -->
    <WhoWeAreTimeline />

    <!-- Propose Yourself -->
    <ProposeYourself />


  </main>
</BaseThemeLayout>

<style>
  /* Water theme specific styles */
  :global(html[data-theme="water"]) {
    --color-primary: 14 116 144;  /* Cyan-700 */
    --color-primary-foreground: 255 255 255;
    --color-background: 240 249 255;  /* Light blue-50 */
    --color-foreground: 3 7 18;  /* Gray-950 */
    --color-border: 224 242 254;  /* Light blue-100 */
  }
  
  /* Dark mode overrides */
  :global(html[data-theme="water"].dark) {
    --color-primary: 8 145 178;  /* Cyan-600 */
    --color-background: 8 47 73;  /* Dark blue-950 */
    --color-foreground: 248 250 252;  /* Slate-50 */
    --color-border: 30 58 138;  /* Blue-900 */
  }

  /* Animation keyframes for background elements */
  @keyframes pulse-slow {
    0%, 100% {
      opacity: 0.3;
      transform: scale(1);
    }
    50% {
      opacity: 0.6;
      transform: scale(1.05);
    }
  }
  
  @keyframes pulse-delay {
    0%, 100% {
      opacity: 0.2;
      transform: scale(1);
    }
    50% {
      opacity: 0.5;
      transform: scale(1.1);
    }
  }
  
  @keyframes pulse-slow-2 {
    0%, 100% {
      opacity: 0.15;
      transform: scale(1);
    }
    50% {
      opacity: 0.4;
      transform: scale(1.08);
    }
  }
  
  .animate-pulse-slow {
    animation: pulse-slow 4s ease-in-out infinite;
  }
  
  .animate-pulse-delay {
    animation: pulse-delay 4s ease-in-out infinite 1s;
  }
  
  .animate-pulse-slow-2 {
    animation: pulse-slow-2 4s ease-in-out infinite 2s;
  }
</style>
